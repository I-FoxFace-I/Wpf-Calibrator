<Window x:Class="Calibrator.WpfControl.Sandbox.Views.DeviceTypeSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:scButton="clr-namespace:Calibrator.WpfControl.Controls.ScButton;assembly=Calibrator.WpfControl"
        xmlns:scDropdown="clr-namespace:Calibrator.WpfControl.Controls.ScDropdown;assembly=Calibrator.WpfControl"
        Title="Select Device Type" 
        Width="400" 
        Height="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Select Device Type"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0 0 0 20"/>

        <!-- Dropdown -->
        <scDropdown:ScDropdownComponent 
            Grid.Row="1"
            LabelText="Device Type"
            Items="{Binding DeviceTypes}"
            SelectedItem="{Binding SelectedType, Mode=TwoWay}"
            DropdownWidth="350"
            Margin="0 0 0 20"/>

        <!-- Description -->
        <TextBlock Grid.Row="2"
                   Text="{Binding TypeDescription}"
                   TextWrapping="Wrap"
                   Margin="0 0 0 20"/>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <scButton:ScButtonComponent
                Content="Continue"
                ButtonType="Accent"
                IconKind="ArrowRight"
                Command="{Binding ContinueCommand}"
                Margin="0 0 10 0"
                ButtonWidth="120"/>

            <scButton:ScButtonComponent
                Content="Cancel"
                ButtonType="Transparent"
                IconKind="Close"
                Command="{Binding CancelCommand}"
                ButtonWidth="120"/>
        </StackPanel>
    </Grid>
</Window>