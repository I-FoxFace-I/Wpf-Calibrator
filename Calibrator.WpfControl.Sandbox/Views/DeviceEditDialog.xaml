<Window x:Class="Calibrator.WpfControl.Sandbox.Views.DeviceEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:scButton="clr-namespace:Calibrator.WpfControl.Controls.ScButton;assembly=Calibrator.WpfControl"
        xmlns:scSmartContainer="clr-namespace:Calibrator.WpfControl.Controls.ScSmartContainer;assembly=Calibrator.WpfControl"
        Title="{Binding Device.DeviceType, StringFormat='Edit {0}'}" 
        Width="900" 
        Height="700"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="{Binding Device.DeviceType, StringFormat='Edit {0}'}"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0 0 0 20"/>

        <!-- SmartContainer -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Margin="0 0 0 20">
            <scSmartContainer:ScSmartContainerComponent
                Fields="{Binding FormFields}"
                DataContext="{Binding Device}"
                Columns="2"
                HorizontalSpacing="16"
                VerticalSpacing="12"/>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <scButton:ScButtonComponent
                Content="Save"
                ButtonType="Accent"
                IconKind="ContentSave"
                Command="{Binding SaveCommand}"
                Margin="0 0 10 0"
                ButtonWidth="120"/>

            <scButton:ScButtonComponent
                Content="Cancel"
                ButtonType="Transparent"
                IconKind="Close"
                Command="{Binding CancelCommand}"
                ButtonWidth="120"/>
        </StackPanel>
    </Grid>
</Window>