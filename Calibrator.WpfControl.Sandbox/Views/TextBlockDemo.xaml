<UserControl x:Class="Calibrator.WpfControl.Sandbox.Views.TextBlockDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:scTextBlock="clr-namespace:Calibrator.WpfControl.Controls.ScTextBlock;assembly=Calibrator.WpfControl">
    <StackPanel>
        <TextBlock Text="ScTextBlock Component" 
                   FontSize="{StaticResource Calibrator.FontSize.XLarge}"
                   FontWeight="Bold"
                   Margin="0 0 0 20"/>

        <TextBlock Text="Basic TextBlock (Read-only display):" 
                   FontSize="{StaticResource Calibrator.FontSize.Large}"
                   Margin="0 0 0 10"/>
        
        <scTextBlock:ScTextBlockComponent 
            LabelText="Full Name"
            Text="John Doe"
            TextBlockWidth="300"/>

        <TextBlock Text="TextBlock with Text Wrapping:" 
                   FontSize="{StaticResource Calibrator.FontSize.Large}"
                   Margin="0 30 0 10"/>
        
        <scTextBlock:ScTextBlockComponent 
            LabelText="Description"
            Text="This is a long text that will wrap to multiple lines when it exceeds the width of the container. Text wrapping makes it easier to read longer content."
            TextBlockWidth="400"
            TextBlockHeight="80"
            TextWrapping="Wrap"/>

        <TextBlock Text="TextBlock with Trimming:" 
                   FontSize="{StaticResource Calibrator.FontSize.Large}"
                   Margin="0 30 0 10"/>
        
        <scTextBlock:ScTextBlockComponent 
            LabelText="Status Message"
            Text="This text is too long and will be trimmed with ellipsis at the end..."
            TextBlockWidth="300"
            TextTrimming="CharacterEllipsis"/>

        <TextBlock Text="TextBlock without Label:" 
                   FontSize="{StaticResource Calibrator.FontSize.Large}"
                   Margin="0 30 0 10"/>
        
        <scTextBlock:ScTextBlockComponent 
            Text="Value without label"
            TextBlockWidth="300"/>

        <Border Background="{StaticResource Calibrator.Brush.Surface}"
                Padding="15"
                CornerRadius="4"
                Margin="0 30 0 0">
            <StackPanel>
                <TextBlock Text="Use Cases:" FontWeight="Bold" Margin="0 0 0 10"/>
                <TextBlock Text="• Display read-only data in forms" TextWrapping="Wrap"/>
                <TextBlock Text="• Show computed values" TextWrapping="Wrap"/>
                <TextBlock Text="• Present information that shouldn't be edited" TextWrapping="Wrap"/>
                <TextBlock Text="• Same styling as ScTextBox for consistency" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
