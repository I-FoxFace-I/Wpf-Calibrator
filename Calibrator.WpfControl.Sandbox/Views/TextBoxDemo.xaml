<UserControl x:Class="Calibrator.WpfControl.Sandbox.Views.TextBoxDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:scTextBox="clr-namespace:Calibrator.WpfControl.Controls.ScTextBox;assembly=Calibrator.WpfControl">
    <StackPanel>
        <TextBlock Text="ScTextBox Component" 
                   FontSize="{StaticResource Calibrator.FontSize.XLarge}"
                   FontWeight="Bold"
                   Margin="0 0 0 20"/>

        <TextBlock Text="Basic TextBox:" 
                   FontSize="{StaticResource Calibrator.FontSize.Large}"
                   Margin="0 0 0 10"/>
        
        <scTextBox:ScTextBoxComponent 
            LabelText="Name"
            Placeholder="Enter your name"
            TextBoxWidth="300"
            TextBoxText="{Binding Name}"/>

        <TextBlock Text="TextBox with Required Validation:" 
                   FontSize="{StaticResource Calibrator.FontSize.Large}"
                   Margin="0 30 0 10"/>
        
        <scTextBox:ScTextBoxComponent 
            x:Name="RequiredTextBox"
            LabelText="Email"
            Placeholder="Enter email address"
            TextBoxWidth="300"
            TextBoxText="{Binding Email}"/>

        <TextBlock Text="TextBox with Min Length Validation:" 
                   FontSize="{StaticResource Calibrator.FontSize.Large}"
                   Margin="0 30 0 10"/>
        
        <scTextBox:ScTextBoxComponent 
            x:Name="MinLengthTextBox"
            LabelText="Username"
            Placeholder="Minimum 5 characters"
            TextBoxWidth="300"
            TextBoxText="{Binding Username}"/>

        <TextBlock Text="TextBox with Regex Validation (Email format):" 
                   FontSize="{StaticResource Calibrator.FontSize.Large}"
                   Margin="0 30 0 10"/>
        
        <scTextBox:ScTextBoxComponent 
            x:Name="EmailTextBox"
            LabelText="Email Address"
            Placeholder="example@domain.com"
            TextBoxWidth="300"
            TextBoxText="{Binding EmailAddress}"/>
    </StackPanel>
</UserControl>
