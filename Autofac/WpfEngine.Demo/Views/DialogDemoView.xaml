<UserControl x:Class="WpfEngine.Demo.Views.DialogDemoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="{Binding DisplayName}" 
                       FontSize="24" 
                       FontWeight="Bold"/>
            <TextBlock Text="Demonstrating various dialog types and scenarios" 
                       FontSize="14" 
                       Foreground="Gray"
                       Margin="0,5,0,0"/>
        </StackPanel>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Dialog Actions Panel -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="0,0,20,0">
                    <!-- Simple Dialogs -->
                    <GroupBox Header="Simple Dialogs" Margin="0,0,0,15">
                        <StackPanel Margin="10">
                            <Button Content="Show Message Dialog" 
                                    Command="{Binding ShowMessageDialogCommand}"
                                    Margin="0,5"
                                    Padding="10,5"/>
                            <Button Content="Show Confirmation Dialog" 
                                    Command="{Binding ShowConfirmationDialogCommand}"
                                    Margin="0,5"
                                    Padding="10,5"/>
                            <Button Content="Show Error Dialog" 
                                    Command="{Binding ShowErrorDialogCommand}"
                                    Margin="0,5"
                                    Padding="10,5"/>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Custom Dialogs -->
                    <GroupBox Header="Custom Dialogs" Margin="0,0,0,15">
                        <StackPanel Margin="10">
                            <Button Content="New Customer..." 
                                    Command="{Binding ShowNewCustomerDialogCommand}"
                                    Margin="0,5"
                                    Padding="10,5"
                                    FontWeight="Bold"/>
                            <Button Content="Edit Selected Customer..." 
                                    Command="{Binding EditCustomerCommand}"
                                    Margin="0,5"
                                    Padding="10,5"
                                    IsEnabled="{Binding SelectedCustomer, Converter={StaticResource NotNullToBooleanConverter}}"/>
                            <Button Content="Select Product..." 
                                    Command="{Binding SelectProductCommand}"
                                    Margin="0,5"
                                    Padding="10,5"
                                    FontWeight="Bold"/>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Advanced Scenarios -->
                    <GroupBox Header="Advanced Scenarios" Margin="0,0,0,15">
                        <StackPanel Margin="10">
                            <Button Content="Nested Dialogs Demo" 
                                    Command="{Binding ShowNestedDialogsCommand}"
                                    Margin="0,5"
                                    Padding="10,5"
                                    Background="LightBlue"
                                    FontWeight="Bold"/>
                            <Button Content="Open Child Window" 
                                    Command="{Binding OpenChildWindowCommand}"
                                    Margin="0,5"
                                    Padding="10,5"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
            
            <!-- Results and Data Panel -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="150"/>
                </Grid.RowDefinitions>
                
                <!-- Last Result -->
                <Border Grid.Row="0" 
                        Background="LightYellow" 
                        Padding="10"
                        CornerRadius="5"
                        Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Last Dialog Result:" 
                                   FontWeight="Bold"/>
                        <TextBlock Text="{Binding LastDialogResult}" 
                                   TextWrapping="Wrap"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Data Tabs -->
                <TabControl Grid.Row="1" Margin="0,0,0,10">
                    <!-- Customers Tab -->
                    <TabItem Header="Customers">
                        <DataGrid ItemsSource="{Binding Customers}"
                                  SelectedItem="{Binding SelectedCustomer}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  Margin="10">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" 
                                                   Binding="{Binding Name}" 
                                                   Width="150"/>
                                <DataGridTextColumn Header="Email" 
                                                   Binding="{Binding Email}" 
                                                   Width="200"/>
                                <DataGridTextColumn Header="Company" 
                                                   Binding="{Binding Company}" 
                                                   Width="150"/>
                                <DataGridTextColumn Header="Type" 
                                                   Binding="{Binding CustomerType}" 
                                                   Width="80"/>
                                <DataGridTextColumn Header="Credit Limit" 
                                                   Binding="{Binding CreditLimit, StringFormat=C}" 
                                                   Width="100"/>
                                <DataGridCheckBoxColumn Header="Active" 
                                                       Binding="{Binding IsActive}" 
                                                       Width="60"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                    
                    <!-- Products Tab -->
                    <TabItem Header="Products">
                        <DataGrid ItemsSource="{Binding Products}"
                                  SelectedItem="{Binding SelectedProduct}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  Margin="10">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="SKU" 
                                                   Binding="{Binding SKU}" 
                                                   Width="100"/>
                                <DataGridTextColumn Header="Name" 
                                                   Binding="{Binding Name}" 
                                                   Width="200"/>
                                <DataGridTextColumn Header="Category" 
                                                   Binding="{Binding Category}" 
                                                   Width="100"/>
                                <DataGridTextColumn Header="Price" 
                                                   Binding="{Binding Price, StringFormat=C}" 
                                                   Width="80"/>
                                <DataGridTextColumn Header="Stock" 
                                                   Binding="{Binding Stock}" 
                                                   Width="60"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                </TabControl>
                
                <!-- Dialog History -->
                <Label Grid.Row="2" Content="Dialog History:" FontWeight="Bold"/>
                <ListBox Grid.Row="3" 
                         ItemsSource="{Binding DialogHistory}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         Background="#F5F5F5"
                         BorderThickness="1"
                         BorderBrush="LightGray">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" 
                                      TextWrapping="Wrap"
                                      Margin="5,2"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                Padding="10,5"
                Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                          Text="Tip: Try nested dialogs to see multiple levels of modal dialogs"
                          VerticalAlignment="Center"
                          FontStyle="Italic"/>
                
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal">
                    <TextBlock Text="Selected Customer: " 
                              VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding SelectedCustomer.Name, TargetNullValue='None'}" 
                              FontWeight="Bold"
                              VerticalAlignment="Center"/>
                    <TextBlock Text=" | Product: " 
                              Margin="10,0,0,0"
                              VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding SelectedProduct.Name, TargetNullValue='None'}" 
                              FontWeight="Bold"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>