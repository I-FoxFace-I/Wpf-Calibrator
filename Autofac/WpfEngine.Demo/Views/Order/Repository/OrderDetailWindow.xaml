<windows:ScopedWindow xmlns:windows="clr-namespace:WpfEngine.Views.Windows;assembly=WpfEngine"
                    x:Class="WpfEngine.Demo.Views.Order.Repository.OrderDetailWindow"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    Title="Order Detail"
                    Width="900" Height="1400"
                    WindowStartupLocation="CenterScreen"
                    Background="#F8F9FA">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#6366F1" 
                    CornerRadius="12" 
                    Padding="24"
                    Margin="0,0,0,6">
                <StackPanel>
                    <TextBlock Text="{Binding Order.OrderNumber, StringFormat='Order: {0}'}" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="{Binding Order.OrderDate, StringFormat='Date: {0:D}'}" 
                               FontSize="14" 
                               Foreground="#E0E7FF"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- Customer & Status Info -->
            <Grid Grid.Row="1" Margin="0,0,0,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" 
                        Background="White" 
                        CornerRadius="8" 
                        Padding="10">
                    <StackPanel>
                        <TextBlock Text="Customer" 
                                   FontSize="12" 
                                   Foreground="#64748B" 
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding Order.Customer.Name}" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding Order.Customer.Email}" 
                                   FontSize="14" 
                                   Foreground="#64748B"
                                   Margin="0,0,0,2"/>
                        <TextBlock Text="{Binding Order.Customer.Phone}" 
                                   FontSize="14" 
                                   Foreground="#64748B"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" 
                        Background="White" 
                        CornerRadius="8" 
                        Padding="10">
                    <StackPanel>
                        <TextBlock Text="Status" 
                                   FontSize="12" 
                                   Foreground="#64748B" 
                                   Margin="0,0,0,8"/>
                        <ComboBox ItemsSource="{Binding OrderStatuses}"
                                  SelectedItem="{Binding SelectedStatus}"
                                  IsEnabled="{Binding IsEditingAddress}"
                                  Padding="12,8"
                                  FontSize="14"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Shipping Address -->
            <Border Grid.Row="2" 
                    Background="White" 
                    CornerRadius="8" 
                    Padding="20"
                    Margin="0,0,0,6">
                <StackPanel>
                    <Grid Margin="0,0,0,6">
                        <TextBlock Text="Shipping Address" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>

                            <Button Content="âœï¸ Edit" 
                                Command="{Binding StartEditingAddressCommand}"
                                Visibility="{Binding IsEditingAddress, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverted}"
                                HorizontalAlignment="Right"
                                Padding="12,6"
                                Background="#6366F1"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"/>
                    </Grid>

                    <!-- Display Mode -->
                    <StackPanel Visibility="{Binding IsEditingAddress, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverted}">
                        <TextBlock Text="{Binding Order.ShippingAddress.FullAddress}" 
                                   FontSize="14"
                                   TextWrapping="Wrap"
                                   Foreground="#1E293B"/>
                    </StackPanel>

                    <!-- Edit Mode -->
                    <StackPanel Visibility="{Binding IsEditingAddress, Converter={StaticResource BoolToVisibilityConverter}}">
                        <!-- Existing Address Selection -->
                        <Border Background="#F1F5F9" 
                                CornerRadius="8" 
                                Padding="16"
                                Margin="0,0,0,6"
                                Visibility="{Binding IsCreatingNewAddress, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverted}">
                            <StackPanel>
                                <TextBlock Text="Select existing address:" 
                                           FontSize="14" 
                                           Margin="0,0,0,6"/>
                                <ComboBox ItemsSource="{Binding AvailableAddresses}"
                                          SelectedItem="{Binding SelectedAddress}"
                                          DisplayMemberPath="FullAddress"
                                          Padding="0,0,0,12"
                                          FontSize="14"/>
                            </StackPanel>
                        </Border>

                        <!-- New Address Form -->
                        <Border Background="#F1F5F9" 
                                CornerRadius="8" 
                                Padding="16"
                                Margin="0,0,0,6"
                                Visibility="{Binding IsCreatingNewAddress, Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="New shipping address:" 
                                           FontSize="14" 
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,6"/>

                                <TextBlock Text="Street" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding NewStreet, UpdateSourceTrigger=PropertyChanged}" 
                                         Padding="8" 
                                         Margin="0,0,0,6"/>

                                <Grid Margin="0,0,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="City" Margin="0,0,0,4"/>
                                        <TextBox Text="{Binding NewCity, UpdateSourceTrigger=PropertyChanged}" 
                                                 Padding="8"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Zip Code" Margin="0,0,0,4"/>
                                        <TextBox Text="{Binding NewZipCode, UpdateSourceTrigger=PropertyChanged}" 
                                                 Padding="8"/>
                                    </StackPanel>
                                </Grid>

                                <TextBlock Text="Country" Margin="0,0,0,4"/>
                                <TextBox Text="{Binding NewCountry, UpdateSourceTrigger=PropertyChanged}" 
                                         Padding="8"/>
                            </StackPanel>
                        </Border>

                        <!-- Toggle New Address -->
                        <Button Content="{Binding IsCreatingNewAddress, Converter={StaticResource BoolToStringConverter}, ConverterParameter='Use Existing Address|+ Add New Address'}"
                                Command="{Binding ToggleNewAddressCommand}"
                                Padding="12,8"
                                Margin="0,0,0,16"
                                Background="White"
                                BorderBrush="#10B981"
                                BorderThickness="2"
                                Foreground="#10B981"
                                HorizontalAlignment="Left"
                                Cursor="Hand"/>

                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal">
                            <Button Content="ðŸ’¾ Save Changes" 
                                    Command="{Binding SaveChangesCommand}"
                                    Padding="16,10"
                                    Margin="0,0,12,0"
                                    Background="#10B981"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontWeight="SemiBold"
                                    Cursor="Hand"/>

                            <Button Content="âŒ Cancel" 
                                    Command="{Binding CancelEditingAddressCommand}"
                                    Padding="16,10"
                                    Background="White"
                                    BorderBrush="#CBD5E1"
                                    BorderThickness="1"
                                    Foreground="#64748B"
                                    FontWeight="SemiBold"
                                    Cursor="Hand"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Order Items -->
            <Border Grid.Row="3" 
                    Background="White" 
                    CornerRadius="8" 
                    Padding="20"
                    Margin="0,0,0,6">
                <StackPanel>
                    <TextBlock Text="Order Items" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,6"/>

                    <DataGrid ItemsSource="{Binding Order.Items}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="None"
                              Background="Transparent"
                              RowBackground="Transparent"
                              AlternatingRowBackground="#F8FAFC"
                              BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Product" 
                                                Binding="{Binding Product.Name}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Quantity" 
                                                Binding="{Binding Quantity}" 
                                                Width="100"/>
                            <DataGridTextColumn Header="Unit Price" 
                                                Binding="{Binding UnitPrice, StringFormat=C}" 
                                                Width="120"/>
                            <DataGridTextColumn Header="Total" 
                                                Binding="{Binding Total, StringFormat=C}" 
                                                Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <!-- Order Summary -->
            <Border Grid.Row="4" 
                    Background="#F1F5F9" 
                    CornerRadius="8" 
                    Padding="24">
                <StackPanel>
                    <Grid Margin="0,0,0,8">
                        <TextBlock Text="Subtotal:" HorizontalAlignment="Left" FontSize="14"/>
                        <TextBlock Text="{Binding Order.Subtotal, StringFormat=C}" 
                                   HorizontalAlignment="Right" 
                                   FontSize="14"
                                   FontWeight="SemiBold"/>
                    </Grid>
                    <Grid Margin="0,0,0,8">
                        <TextBlock Text="VAT (21%):" HorizontalAlignment="Left" FontSize="14"/>
                        <TextBlock Text="{Binding Order.Tax, StringFormat=C}" 
                                   HorizontalAlignment="Right" 
                                   FontSize="14"
                                   FontWeight="SemiBold"/>
                    </Grid>
                    <Border Height="2" Background="#CBD5E1" Margin="0,8"/>
                    <Grid Margin="0,12,0,0">
                        <TextBlock Text="Total:" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Left"/>
                        <TextBlock Text="{Binding Order.Total, StringFormat=C}" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="#10B981"
                                   HorizontalAlignment="Right"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</windows:ScopedWindow>
