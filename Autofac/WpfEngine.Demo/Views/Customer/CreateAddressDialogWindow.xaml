<windows:ScopedDialogWindow  xmlns:windows="clr-namespace:WpfEngine.Views.Windows;assembly=WpfEngine"
                    x:Class="WpfEngine.Demo.Views.Dialogs.CreateAddressDialogWindow"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:WpfEngine.Demo.ViewModels.Dialogs"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:demo="clr-namespace:WpfEngine.Demo.Models"
                    Title="Create New Address" 
                    Height="700" 
                    Width="600"
                    WindowStartupLocation="CenterOwner"
                    ResizeMode="NoResize"
                    Background="#F8F9FA">

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#10B981" 
                CornerRadius="12" 
                Padding="24"
                Margin="0,0,0,24">
            <StackPanel>
                <TextBlock Text="ðŸ“ Create New Address" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock Text="{Binding CustomerName, StringFormat='For customer: {0}'}" 
                           FontSize="14" 
                           Foreground="#D1FAE5"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Form -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="8" 
                Padding="24"
                Margin="0,0,0,24">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <ComboBox SelectedItem="{Binding AddressType}" 
                              Padding="12"
                              FontSize="14"
                              BorderBrush="#E2E8F0"
                              Margin="0,0,0,12">
                        <ComboBox.ItemsSource>
                            <x:Array Type="{x:Type demo:AddressType}">
                                <demo:AddressType>Both</demo:AddressType>
                                <demo:AddressType>Billing</demo:AddressType>
                                <demo:AddressType>Shipping</demo:AddressType>
                            </x:Array>
                        </ComboBox.ItemsSource>
                    </ComboBox>
                    <!-- Street -->
                    <TextBlock Text="Street Address *" 
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="#1E293B"
                               Margin="0,0,0,8"/>
                    <TextBox Text="{Binding Street, UpdateSourceTrigger=PropertyChanged}"
                             Padding="12"
                             FontSize="14"
                             Margin="0,0,0,20"
                             BorderBrush="#E2E8F0"
                             BorderThickness="1"/>

                    <!-- City & Postal Code Row -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- City -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="City *" 
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="#1E293B"
                                       Margin="0,0,0,8"/>
                            <TextBox Text="{Binding City, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="12"
                                     FontSize="14"
                                     BorderBrush="#E2E8F0"
                                     BorderThickness="1"/>
                        </StackPanel>

                        <!-- Postal Code -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Postal Code *" 
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="#1E293B"
                                       Margin="0,0,0,8"/>
                            <TextBox Text="{Binding PostalCode, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="12"
                                     FontSize="14"
                                     BorderBrush="#E2E8F0"
                                     BorderThickness="1"/>
                        </StackPanel>
                    </Grid>

                    <!-- Country -->
                    <TextBlock Text="Country *" 
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="#1E293B"
                               Margin="0,0,0,8"/>
                    <TextBox Text="{Binding Country, UpdateSourceTrigger=PropertyChanged}"
                             Padding="12"
                             FontSize="14"
                             BorderBrush="#E2E8F0"
                             BorderThickness="1"/>
                    
                    
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Cancel" 
                    Command="{Binding CancelDialogCommand}"
                    Padding="24,12"
                    Margin="0,0,12,0"
                    Background="White"
                    BorderBrush="#CBD5E1"
                    BorderThickness="1"
                    Foreground="#64748B"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Cursor="Hand"/>
            
            <Button Content="âœ“ Create Address" 
                    Command="{Binding CompleteDialogCommand}"
                    Padding="24,12"
                    Background="#10B981"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Cursor="Hand"
                    IsDefault="True"/>
        </StackPanel>
    </Grid>
</windows:ScopedDialogWindow>
