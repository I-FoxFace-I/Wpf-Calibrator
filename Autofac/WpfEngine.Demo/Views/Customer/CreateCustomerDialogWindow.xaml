<windows:ScopedDialogWindow  xmlns:windows="clr-namespace:WpfEngine.Views.Windows;assembly=WpfEngine"
                       x:Class="WpfEngine.Demo.Views.Customer.CreateCustomerDialogWindow"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:demo="clr-namespace:WpfEngine.Demo.Models"
                    Title="Create New Customer"
                    Width="700" Height="1400"
                    Background="#F8F9FA">

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#10B981" 
                CornerRadius="12" 
                Padding="24"
                Margin="0,0,0,24">
            <StackPanel>
                <TextBlock Text="👤 Customer Details" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock Text="Manage customer information and addresses" 
                           FontSize="14" 
                           Foreground="#D1FAE5"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Basic Info -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="20"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Basic Information" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,16"/>

                        <TextBlock Text="Name *" 
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#1E293B"
                                   Margin="0,0,0,4"/>
                        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="12"
                                 FontSize="14"
                                 BorderBrush="#E2E8F0"
                                 Margin="0,0,0,12"/>

                        <TextBlock Text="Email *" 
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#1E293B"
                                   Margin="0,0,0,4"/>
                        <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="12"
                                 FontSize="14"
                                 BorderBrush="#E2E8F0"
                                 Margin="0,0,0,12"/>

                        <TextBlock Text="Phone" 
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#1E293B"
                                   Margin="0,0,0,4"/>
                        <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="12"
                                 FontSize="14"
                                 BorderBrush="#E2E8F0"
                                 Margin="0,0,0,12"/>

                        <TextBlock Text="Customer Type" 
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#1E293B"
                                   Margin="0,0,0,4"/>
                        <ComboBox SelectedItem="{Binding Type}" 
                                  Padding="12"
                                  FontSize="14"
                                  BorderBrush="#E2E8F0"
                                  Margin="0,0,0,12">
                            <ComboBox.ItemsSource>
                                <x:Array Type="{x:Type demo:CustomerType}">
                                    <demo:CustomerType>Individual</demo:CustomerType>
                                    <demo:CustomerType>Business</demo:CustomerType>
                                </x:Array>
                            </ComboBox.ItemsSource>
                        </ComboBox>

                        <TextBlock Text="Company Name" 
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#1E293B"
                                   Margin="0,0,0,4"/>
                        <TextBox Text="{Binding CompanyName, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="12"
                                 FontSize="14"
                                 BorderBrush="#E2E8F0"
                                 Margin="0,0,0,12"/>

                        <TextBlock Text="Tax ID" 
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#1E293B"
                                   Margin="0,0,0,4"/>
                        <TextBox Text="{Binding TaxId, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="12"
                                 FontSize="14"
                                 BorderBrush="#E2E8F0"/>
                    </StackPanel>
                </Border>

                <!-- Addresses Section -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="20">
                    <!--<StackPanel>
                        --><!-- Addresses Header with Actions --><!--
                        <Grid Margin="0,0,0,16">
                            <TextBlock Text="📍 Addresses" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>

                            <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Right">
                                --><!-- Create Address Button --><!--
                                <Button Content="➕ Add New"
                                        Command="{Binding CreateAddressCommand}"
                                        Padding="16,10"
                                        Margin="0,0,12,0"
                                        Background="#10B981"
                                        Foreground="White"
                                        BorderThickness="0"
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Cursor="Hand"/>

                                --><!-- Delete Selected Address Button --><!--
                                <Button Content="🗑️ Delete"
                                        Command="{Binding DeleteAddressCommand}"
                                        Padding="16,10"
                                        Background="#EF4444"
                                        Foreground="White"
                                        BorderThickness="0"
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Cursor="Hand"/>
                            </StackPanel>
                        </Grid>

                        --><!-- Address ListBox --><!--
                        <ListBox ItemsSource="{Binding Addresses}"
                                 SelectedItem="{Binding SelectedAddress}"
                                 MinHeight="150"
                                 MaxHeight="300"
                                 BorderBrush="#E2E8F0"
                                 BorderThickness="1"
                                 Background="White"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                            <ListBox.Resources>
                                --><!-- Remove default selection highlight --><!--
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border Name="Border"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="#E2E8F0"
                                                        BorderThickness="0,0,0,1"
                                                        Padding="16">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="#DBEAFE"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="#F1F5F9"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.Resources>

                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <StackPanel>
                                            <TextBlock FontWeight="SemiBold" 
                                                       FontSize="14"
                                                       Foreground="#1E293B"
                                                       Margin="0,0,0,4">
                                                <Run Text="{Binding Type, Mode=OneWay}"/>
                                                <Run Text="Address" Foreground="#64748B"/>
                                            </TextBlock>
                                            <TextBlock Text="{Binding Street}" 
                                                       FontSize="13"
                                                       Foreground="#1E293B"
                                                       Margin="0,0,0,2"/>
                                            <TextBlock FontSize="13"
                                                       Foreground="#64748B">
                                                <Run Text="{Binding City, Mode=OneWay}"/><Run Text=", "/>
                                                <Run Text="{Binding ZipCode, Mode=OneWay}"/>
                                            </TextBlock>
                                            <TextBlock Text="{Binding Country}" 
                                                       FontSize="13"
                                                       Foreground="#64748B"/>
                                        </StackPanel>

                                        --><!-- Selection Indicator (optional) --><!--
                                        <Border Width="4"
                                                Background="#10B981"
                                                HorizontalAlignment="Left"
                                                CornerRadius="0,2,2,0"
                                                Margin="-16,0,0,0"
                                                Visibility="{Binding IsSelected, 
                                                            RelativeSource={RelativeSource AncestorType=ListBoxItem},
                                                            Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>

                            --><!-- Empty State Template --><!--
                            <ListBox.Style>
                                <Style TargetType="ListBox">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Addresses.Count}" Value="0">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate>
                                                        <Border Background="White" 
                                                                BorderBrush="#E2E8F0" 
                                                                BorderThickness="1"
                                                                CornerRadius="8"
                                                                MinHeight="150">
                                                            <TextBlock Text="No addresses yet. Click 'Add New' to create one."
                                                                       FontSize="13"
                                                                       Foreground="#94A3B8"
                                                                       FontStyle="Italic"
                                                                       TextAlignment="Center"
                                                                       VerticalAlignment="Center"
                                                                       Margin="20"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.Style>
                        </ListBox>

                        --><!-- Helper Text --><!--
                        <TextBlock Text="💡 Click on an address to select it, then use Delete button to remove"
                                   FontSize="11"
                                   Foreground="#94A3B8"
                                   FontStyle="Italic"
                                   Margin="0,8,0,0"/>
                    </StackPanel>-->
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,24,0,0">
            <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
                <Button Content="Cancel" 
        Command="{Binding CancelDialogCommand}"
        Padding="24,12"
        Margin="0,0,12,0"
        Background="White"
        BorderBrush="#CBD5E1"
        BorderThickness="1"
        Foreground="#64748B"
        FontSize="14"
        FontWeight="SemiBold"
        Cursor="Hand"/>

                <Button Content="✓ Create Customer" 
        Command="{Binding CompleteDialogCommand}"
        Padding="24,12"
        Background="#10B981"
        Foreground="White"
        BorderThickness="0"
        FontSize="14"
        FontWeight="SemiBold"
        Cursor="Hand"
        IsDefault="True"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</windows:ScopedDialogWindow>
