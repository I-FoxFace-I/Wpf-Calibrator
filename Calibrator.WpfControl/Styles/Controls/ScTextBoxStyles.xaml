<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">

    <Style TargetType="telerik:RadWatermarkTextBox" x:Key="ScTextBoxStyle">
        <Setter Property="Background" Value="{StaticResource Calibrator.Brush.Transparent}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Calibrator.Brush.Transparent}"/>
        <Setter Property="BorderThickness" Value="{StaticResource Calibrator.BorderThickness.Thin}"/>
        <Setter Property="Padding" Value="{StaticResource Calibrator.Padding.Medium}"/>
        <Setter Property="FontFamily" Value="{StaticResource Calibrator.Font.Primary}"/>
        <Setter Property="FontSize" Value="{StaticResource Calibrator.FontSize.Medium}"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="ScValidationErrorText">
        <Setter Property="FontFamily" Value="{StaticResource Calibrator.Font.Primary}"/>
        <Setter Property="FontSize" Value="{StaticResource Calibrator.FontSize.Small}"/>
        <Setter Property="Foreground" Value="{StaticResource Calibrator.Brush.Error}"/>
        <Setter Property="Margin" Value="0 5 0 0"/>
    </Style>
</ResourceDictionary>