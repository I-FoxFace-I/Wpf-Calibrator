<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
                    xmlns:resources="clr-namespace:Calibrator.WpfControl.Resources">

    <!-- Telerik-specific templates and styles -->
    <ControlTemplate x:Key="GridViewCheckBoxTemplate" TargetType="telerik:GridViewCheckBox">
        <Grid>
            <Border x:Name="Border"
                BorderThickness="{StaticResource Calibrator.BorderThickness.Medium}"
                CornerRadius="{StaticResource Calibrator.CornerRadius.Small}"
                Background="{StaticResource Calibrator.Brush.Background}"
                BorderBrush="{StaticResource Calibrator.Brush.Border}"
                Width="{StaticResource Calibrator.CheckBox.Size}"
                Height="{StaticResource Calibrator.CheckBox.Size}">
                <Grid>
                    <iconPacks:PackIconMaterial
                        x:Name="CheckMark"
                        Kind="Check"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Visibility="Collapsed"
                        Foreground="{StaticResource Calibrator.Brush.Background}" />
                </Grid>
            </Border>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsChecked" Value="True">
                <Setter TargetName="Border" Property="Background" Value="{StaticResource Calibrator.Brush.Primary}" />
                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible" />
                <Setter TargetName="Border" Property="BorderThickness" Value="{StaticResource Calibrator.BorderThickness.None}" />
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource Calibrator.Brush.BorderDark}" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <Style TargetType="telerik:GridViewCell" x:Key="{x:Static resources:ResourceKeys.GridViewCellStyle}">
        <Style.Resources>
            <Style TargetType="telerik:GridViewCheckBox">
                <Setter Property="Template" Value="{StaticResource GridViewCheckBoxTemplate}" />
            </Style>
        </Style.Resources>
    </Style>

    <!-- RadExpander Style for SmartContainer -->
    <Style TargetType="telerik:RadExpander">
        <Setter Property="telerik:StyleManager.Theme" Value="Material"/>
        <Setter Property="FontFamily" Value="{StaticResource Calibrator.Font.Primary}"/>
        <Setter Property="FontSize" Value="{StaticResource Calibrator.FontSize.Medium}"/>
        <Setter Property="Foreground" Value="{StaticResource Calibrator.Brush.TextPrimary}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="ExpandDirection" Value="Down"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="telerik:RadExpander">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header with toggle button -->
                        <Grid Grid.Row="0" Background="{StaticResource Calibrator.Brush.Divider}">
                            <!--<Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>-->
                            <StackPanel Orientation="Horizontal">
                                <!-- Header Content (ScDivider) -->
                                <ContentPresenter Grid.Column="0"
                                            Content="{TemplateBinding Header}"
                                            VerticalAlignment="Center"/>

                                <!-- Toggle Button with Arrow Icon on the right -->
                                <ToggleButton Grid.Column="1"
                                        IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Padding="10,0,10,0"
                                        VerticalAlignment="Center">
                                    <ToggleButton.Template>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border Background="{TemplateBinding Background}"
                                               Padding="{TemplateBinding Padding}">
                                                <iconPacks:PackIconMaterial 
                                                x:Name="ExpanderIcon"
                                                Kind="ChevronDown"
                                                Width="24"
                                                Height="24"
                                                Foreground="#909090"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                RenderTransformOrigin="0.5,0.5">
                                                    <iconPacks:PackIconMaterial.RenderTransform>
                                                        <RotateTransform Angle="0"/>
                                                    </iconPacks:PackIconMaterial.RenderTransform>
                                                </iconPacks:PackIconMaterial>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <!-- Rotate arrow when not checked (collapsed) -->
                                                <Trigger Property="IsChecked" Value="False">
                                                    <Setter TargetName="ExpanderIcon" Property="RenderTransform">
                                                        <Setter.Value>
                                                            <RotateTransform Angle="-90"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>

                                                <!-- Hover effect on arrow -->
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="ExpanderIcon" Property="Foreground" Value="#606060"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                </ToggleButton>
                            </StackPanel>
                        </Grid>

                        <!-- Content Area -->
                        <ContentPresenter Grid.Row="1"
                                        x:Name="ContentPresenter"
                                        Content="{TemplateBinding Content}"
                                        Visibility="Visible"/>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Hide content when collapsed -->
                        <Trigger Property="IsExpanded" Value="False">
                            <Setter TargetName="ContentPresenter" Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>