<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- ============================================ -->
    <!-- COLORS - Atlas Copco Design System -->
    <!-- ============================================ -->

    <!-- Primary Colors -->
    <Color x:Key="Calibrator.Color.Primary">#054E5A</Color>
    <Color x:Key="Calibrator.Color.PrimaryDark">#04424D</Color>
    <Color x:Key="Calibrator.Color.PrimaryLight">#076B7A</Color>

    <!-- Surface Colors -->
    <Color x:Key="Calibrator.Color.Surface">#DFE4E7</Color>
    <Color x:Key="Calibrator.Color.Background">#FFFFFF</Color>
    <Color x:Key="Calibrator.Color.Divider">#E0E0E0</Color>

    <!-- Text Colors -->
    <Color x:Key="Calibrator.Color.TextPrimary">#000000</Color>
    <Color x:Key="Calibrator.Color.TextSecondary">#757575</Color>
    <Color x:Key="Calibrator.Color.TextLabel">#054E5A</Color>

    <!-- Border Colors -->
    <Color x:Key="Calibrator.Color.Border">#808080</Color>
    <Color x:Key="Calibrator.Color.BorderDark">#A9A9A9</Color>

    <!-- State Colors -->
    <Color x:Key="Calibrator.Color.Error">#D32F2F</Color>
    <Color x:Key="Calibrator.Color.Success">#388E3C</Color>
    <Color x:Key="Calibrator.Color.Warning">#F57C00</Color>
    <Color x:Key="Calibrator.Color.Info">#1976D2</Color>

    <!-- Scrollbar Colors -->
    <Color x:Key="Calibrator.Color.ScrollbarTrack">#DDDDDD</Color>
    <Color x:Key="Calibrator.Color.ScrollbarThumb">#BBBDC0</Color>
    <Color x:Key="Calibrator.Color.ScrollbarThumbHover">#999FA2</Color>

    <!-- ============================================ -->
    <!-- BRUSHES -->
    <!-- ============================================ -->

    <SolidColorBrush x:Key="Calibrator.Brush.Primary" Color="{StaticResource Calibrator.Color.Primary}"/>
    <SolidColorBrush x:Key="Calibrator.Brush.PrimaryDark" Color="{StaticResource Calibrator.Color.PrimaryDark}"/>
    <SolidColorBrush x:Key="Calibrator.Brush.PrimaryLight" Color="{StaticResource Calibrator.Color.PrimaryLight}"/>
    <SolidColorBrush x:Key="Calibrator.Brush.Surface" Color="{StaticResource Calibrator.Color.Surface}"/>
    <SolidColorBrush x:Key="Calibrator.Brush.Background" Color="{StaticResource Calibrator.Color.Background}"/>
    <SolidColorBrush x:Key="Calibrator.Brush.Divider" Color="{StaticResource Calibrator.Color.Divider}"/>
    <SolidColorBrush x:Key="Calibrator.Brush.TextPrimary" Color="{StaticResource Calibrator.Color.TextPrimary}"/>
    <SolidColorBrush x:Key="Calibrator.Brush.TextSecondary" Color="{StaticResource Calibrator.Color.TextSecondary}"/>
    <SolidColorBrush x:Key="Calibrator.Brush.TextLabel" Color="{StaticResource Calibrator.Color.TextLabel}"/>
    <SolidColorBrush x:Key="Calibrator.Brush.Border" Color="{StaticResource Calibrator.Color.Border}"/>
    <SolidColorBrush x:Key="Calibrator.Brush.BorderDark" Color="{StaticResource Calibrator.Color.BorderDark}"/>
    <SolidColorBrush x:Key="Calibrator.Brush.Error" Color="{StaticResource Calibrator.Color.Error}"/>
    <SolidColorBrush x:Key="Calibrator.Brush.Success" Color="{StaticResource Calibrator.Color.Success}"/>
    <SolidColorBrush x:Key="Calibrator.Brush.Warning" Color="{StaticResource Calibrator.Color.Warning}"/>
    <SolidColorBrush x:Key="Calibrator.Brush.Transparent" Color="Transparent"/>

    <!-- ============================================ -->
    <!-- SPACING (8px base unit) -->
    <!-- ============================================ -->

    <Thickness x:Key="Calibrator.Margin.XSmall">4</Thickness>
    <Thickness x:Key="Calibrator.Margin.Small">8</Thickness>
    <Thickness x:Key="Calibrator.Margin.Medium">16</Thickness>
    <Thickness x:Key="Calibrator.Margin.Large">24</Thickness>

    <Thickness x:Key="Calibrator.Padding.XSmall">4</Thickness>
    <Thickness x:Key="Calibrator.Padding.Small">8</Thickness>
    <Thickness x:Key="Calibrator.Padding.Medium">10</Thickness>
    <Thickness x:Key="Calibrator.Padding.Large">16</Thickness>

    <sys:Double x:Key="Calibrator.Spacing.XSmall">4</sys:Double>
    <sys:Double x:Key="Calibrator.Spacing.Small">8</sys:Double>
    <sys:Double x:Key="Calibrator.Spacing.Medium">16</sys:Double>
    <sys:Double x:Key="Calibrator.Spacing.Large">24</sys:Double>
    <sys:Double x:Key="Calibrator.Spacing.XLarge">32</sys:Double>

    <!-- ============================================ -->
    <!-- TYPOGRAPHY -->
    <!-- ============================================ -->

    <FontFamily x:Key="Calibrator.Font.Primary">pack://application:,,,/Calibrator.WpfControl;component/Resources/Fonts/#Source Sans Pro</FontFamily>

    <sys:Double x:Key="Calibrator.FontSize.XSmall">10</sys:Double>
    <sys:Double x:Key="Calibrator.FontSize.Small">12</sys:Double>
    <sys:Double x:Key="Calibrator.FontSize.Medium">14</sys:Double>
    <sys:Double x:Key="Calibrator.FontSize.Large">20</sys:Double>
    <sys:Double x:Key="Calibrator.FontSize.XLarge">24</sys:Double>

    <!-- ============================================ -->
    <!-- BORDERS & CORNERS -->
    <!-- ============================================ -->

    <CornerRadius x:Key="Calibrator.CornerRadius.Small">3</CornerRadius>
    <CornerRadius x:Key="Calibrator.CornerRadius.Medium">4</CornerRadius>
    <CornerRadius x:Key="Calibrator.CornerRadius.Large">5</CornerRadius>

    <Thickness x:Key="Calibrator.BorderThickness.None">0</Thickness>
    <Thickness x:Key="Calibrator.BorderThickness.Thin">1</Thickness>
    <Thickness x:Key="Calibrator.BorderThickness.Medium">2</Thickness>

    <!-- ============================================ -->
    <!-- SHADOWS -->
    <!-- ============================================ -->

    <DropShadowEffect x:Key="Calibrator.Shadow.Default" 
                      Color="Black" 
                      Opacity="0.3" 
                      BlurRadius="5" 
                      ShadowDepth="2"/>

    <DropShadowEffect x:Key="Calibrator.Shadow.Light" 
                      Color="Black" 
                      Opacity="0.1" 
                      BlurRadius="3" 
                      ShadowDepth="1"/>

    <!-- ============================================ -->
    <!-- COMPONENT SIZES -->
    <!-- ============================================ -->

    <!-- Button -->
    <sys:Double x:Key="Calibrator.Button.Width.Default">135</sys:Double>
    <sys:Double x:Key="Calibrator.Button.Height.Default">40</sys:Double>

    <!-- TextBox -->
    <sys:Double x:Key="Calibrator.TextBox.Width.Default">200</sys:Double>
    <sys:Double x:Key="Calibrator.TextBox.Height.Default">50</sys:Double>

    <!-- Dropdown -->
    <sys:Double x:Key="Calibrator.Dropdown.Width.Default">200</sys:Double>
    <sys:Double x:Key="Calibrator.Dropdown.Height.Default">50</sys:Double>

    <!-- Icon -->
    <Thickness x:Key="Calibrator.Icon.Size.Small">16</Thickness>
    <Thickness x:Key="Calibrator.Icon.Size.Medium">20</Thickness>
    <Thickness x:Key="Calibrator.Icon.Size.Large">24</Thickness>

    <!-- CheckBox -->
    <sys:Double x:Key="Calibrator.CheckBox.Size">24</sys:Double>

    <!-- Divider -->
    <sys:Double x:Key="Calibrator.Divider.Height">40</sys:Double>

</ResourceDictionary>