<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--
    Calibrator.WpfControl â€“ Telerik Resource Umbrella
    Includes base theme, converters, and all Telerik-dependent control styles
  -->
    <ResourceDictionary.MergedDictionaries>
        <!-- Base theme (colors, spacing, typography, effects) -->
        <ResourceDictionary Source="/Calibrator.WpfControl;component/Themes/CalibratorTheme.xaml" />

        <!-- Common helpers and templates -->
        <ResourceDictionary Source="/Calibrator.WpfControl;component/Themes/Controls/CommonResources.xaml" />

        <!-- Telerik-specific resources -->
        <ResourceDictionary Source="/Calibrator.WpfControl;component/Themes/Controls/CommonResources.Telerik.xaml" />

        <!-- Control styles that target Telerik controls -->
        <ResourceDictionary Source="/Calibrator.WpfControl;component/Themes/Controls/ScButtonStyles.xaml" />
        <ResourceDictionary Source="/Calibrator.WpfControl;component/Themes/Controls/ScDropdownStyles.xaml" />
        <ResourceDictionary Source="/Calibrator.WpfControl;component/Themes/Controls/ScTextBoxStyles.xaml" />
        <ResourceDictionary Source="/Calibrator.WpfControl;component/Themes/Controls/UniTableStyles.xaml" />

        <!-- SmartTable styles (NEW) -->
        <ResourceDictionary Source="/Calibrator.WpfControl;component/Themes/Controls/SmartTableStyles.xaml" />

        <!-- Converters used by controls -->
        <ResourceDictionary Source="/Calibrator.WpfControl;component/Converters/Converters.xaml" />
    </ResourceDictionary.MergedDictionaries>
</ResourceDictionary>