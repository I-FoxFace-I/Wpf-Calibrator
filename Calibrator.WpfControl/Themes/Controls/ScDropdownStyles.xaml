<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">
    
    <Style TargetType="telerik:RadComboBox" x:Key="ScDropdownStyle">
        <Setter Property="Background" Value="{StaticResource Calibrator.Brush.Transparent}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Calibrator.Brush.Transparent}"/>
        <Setter Property="BorderThickness" Value="{StaticResource Calibrator.BorderThickness.None}"/>
        <Setter Property="Padding" Value="{StaticResource Calibrator.Padding.Medium}"/>
        <Setter Property="FontFamily" Value="{StaticResource Calibrator.Font.Primary}"/>
        <Setter Property="FontSize" Value="{StaticResource Calibrator.FontSize.Medium}"/>
    </Style>
    
    <Style TargetType="Label" x:Key="ScDropdownLabel">
        <Setter Property="FontFamily" Value="{StaticResource Calibrator.Font.Primary}"/>
        <Setter Property="FontSize" Value="{StaticResource Calibrator.FontSize.Medium}"/>
        <Setter Property="Foreground" Value="{StaticResource Calibrator.Brush.TextLabel}"/>
    </Style>
</ResourceDictionary>
