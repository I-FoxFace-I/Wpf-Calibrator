<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Common converters -->
    <BooleanToVisibilityConverter x:Key="BooleanToVisibility" />

    <!-- Common styles -->
    <Style TargetType="Border" x:Key="ShadowedBorder">
        <Setter Property="Background" Value="{StaticResource Calibrator.Brush.Background}" />
        <Setter Property="CornerRadius" Value="{StaticResource Calibrator.CornerRadius.Medium}" />
        <Setter Property="BorderBrush" Value="{StaticResource Calibrator.Brush.Transparent}" />
        <Setter Property="BorderThickness" Value="{StaticResource Calibrator.BorderThickness.Thin}" />
        <Setter Property="Effect" Value="{StaticResource Calibrator.Shadow.Default}" />
    </Style>
</ResourceDictionary>
