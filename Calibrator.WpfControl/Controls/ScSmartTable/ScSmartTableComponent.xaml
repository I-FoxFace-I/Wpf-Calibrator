<UserControl x:Class="Calibrator.WpfControl.Controls.ScSmartTable.ScSmartTableComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- Operations template for action buttons in rows -->
        <DataTemplate x:Key="SmartTableOperationsTemplate">
            <StackPanel Orientation="Horizontal">
                <ItemsControl ItemsSource="{Binding TableOperations, RelativeSource={RelativeSource AncestorType=UserControl}}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource ScRegularButton}"
                                    Command="{Binding OnExecuteActionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    Margin="0 0 10 0"
                                    Background="Transparent">
                                <Button.CommandParameter>
                                    <MultiBinding Converter="{StaticResource UniTableActionEntityConverter}">
                                        <Binding />
                                        <Binding RelativeSource="{RelativeSource AncestorType=telerik:GridViewRow}"
                                                 Path="DataContext" />
                                    </MultiBinding>
                                </Button.CommandParameter>
                                <iconPacks:PackIconMaterial 
                                    Kind="{Binding IconKind}"
                                    Width="20"
                                    Height="20"/>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <telerik:RadGridView
            telerik:StyleManager.Theme="Material"
            x:Name="GridView"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            AutoGenerateColumns="False"
            CanUserDeleteRows="False"
            CanUserInsertRows="False"
            CanUserFreezeColumns="{Binding EnableColumnFreezing, RelativeSource={RelativeSource AncestorType=UserControl}}"
            CanUserReorderColumns="{Binding EnableColumnReordering, RelativeSource={RelativeSource AncestorType=UserControl}}"
            CanUserSortColumns="{Binding EnableSorting, RelativeSource={RelativeSource AncestorType=UserControl}}"
            IsFilteringAllowed="{Binding EnableFiltering, RelativeSource={RelativeSource AncestorType=UserControl}}"
            ShowColumnFooters="{Binding ShowColumnFooters, RelativeSource={RelativeSource AncestorType=UserControl}}"
            RowIndicatorVisibility="Collapsed"
            ShowGroupPanel="{Binding EnableGrouping, RelativeSource={RelativeSource AncestorType=UserControl}}"
            ShowSearchPanel="{Binding ShowSearchPanel, RelativeSource={RelativeSource AncestorType=UserControl}}"
            ValidatesOnDataErrors="None"
            IsReadOnly="True">
        </telerik:RadGridView>
    </Grid>
</UserControl>

