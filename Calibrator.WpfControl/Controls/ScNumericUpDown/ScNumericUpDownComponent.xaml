<UserControl x:Class="Calibrator.WpfControl.Controls.ScNumericUpDown.ScNumericUpDownComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Label
            Grid.Row="0"
            Style="{StaticResource ScTextBoxLabel}"
            Content="{Binding LabelText, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Visibility="{Binding Path=IsLabelVisible, Converter={StaticResource BooleanToVisibility}, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Margin="0 0 0 10"/>

        <Border Grid.Row="1"
                Style="{StaticResource ShadowedBorder}"
                Width="{Binding NumericWidth, RelativeSource={RelativeSource AncestorType=UserControl}}"
                Height="{Binding NumericHeight, RelativeSource={RelativeSource AncestorType=UserControl}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox
                    x:Name="NumericTextBox"
                    Grid.Column="0"
                    VerticalContentAlignment="Center"
                    HorizontalContentAlignment="Left"
                    Padding="{StaticResource Calibrator.Padding.Medium}"
                    FontSize="{StaticResource Calibrator.FontSize.Medium}"
                    FontFamily="{StaticResource Calibrator.Font.Primary}"
                    BorderThickness="0"
                    Background="Transparent"
                    Text="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    LostFocus="OnLostFocus"
                    PreviewTextInput="OnPreviewTextInput"/>
                
                <StackPanel Grid.Column="1" 
                            Orientation="Vertical"
                            VerticalAlignment="Center"
                            Margin="0 0 5 0"
                            Visibility="{Binding ShowButtons, RelativeSource={RelativeSource AncestorType=UserControl}, 
                                                Converter={StaticResource BooleanToVisibility}}">
                    <Button
                        Width="20"
                        Height="20"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="OnIncrementClick"
                        Padding="0"
                        Cursor="Hand">
                        <iconPacks:PackIconMaterial 
                            Kind="ChevronUp"
                            Width="16"
                            Height="16"
                            Foreground="{StaticResource Calibrator.Brush.PrimaryDark}"/>
                    </Button>
                    <Button
                        Width="20"
                        Height="20"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="OnDecrementClick"
                        Padding="0"
                        Cursor="Hand">
                        <iconPacks:PackIconMaterial 
                            Kind="ChevronDown"
                            Width="16"
                            Height="16"
                            Foreground="{StaticResource Calibrator.Brush.PrimaryDark}"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Validation Error Message -->
        <TextBlock Grid.Row="2"
                   Text="{Binding ValidationError, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Style="{StaticResource ScValidationErrorText}"
                   Visibility="{Binding IsValid, RelativeSource={RelativeSource AncestorType=UserControl}, 
                                        Converter={StaticResource InverseBoolToVisibility}}"/>
    </Grid>
</UserControl>
