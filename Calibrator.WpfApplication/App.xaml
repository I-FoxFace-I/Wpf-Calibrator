<Application x:Class="Calibrator.WpfApplication.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:converters="clr-namespace:Calibrator.WpfApplication.Converters"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Converters -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <converters:ScButtonTypeToStyleConverter x:Key="ScButtonTypeToStyleConverter" />
                    <converters:UniTableActionEntityConverter x:Key="UniTableActionEntityConverter" />
                </ResourceDictionary>
                <ResourceDictionary Source="Resources/CommonResources.xaml" />
                <ResourceDictionary Source="Resources/BaseViewStyles.xaml" />
                <ResourceDictionary Source="Resources/ScButtonStyles.xaml" />
                <ResourceDictionary Source="Resources/ScTextBoxStyles.xaml" />
                <ResourceDictionary Source="Resources/ScDropdownStyles.xaml" />
                <ResourceDictionary Source="Resources/UniTableStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
