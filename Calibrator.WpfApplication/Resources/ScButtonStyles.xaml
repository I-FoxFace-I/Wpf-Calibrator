<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <FontFamily x:Key="SourceSansProFont">pack://application:,,,/Calibrator.WpfApplication;component/Resources/Fonts/#Source Sans Pro</FontFamily>
    
    <Style x:Key="BaseScButtonTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontFamily" Value="{StaticResource SourceSansProFont}"/>
    </Style>
    
    <Style x:Key="ScRegularButton" TargetType="Button">
        <Setter Property="Background" Value="#DFE4E7"/>
        <Setter Property="Foreground" Value="#04424D"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="50 0 50 0 "/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource ScRegularButton}">
        <Setter Property="Background" Value="#054E5A"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
    <Style x:Key="TransparentButton" TargetType="Button" BasedOn="{StaticResource ScRegularButton}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#000000"/>
        <Setter Property="BorderBrush" Value="#000000"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
</ResourceDictionary>


