<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:Calibrator.WpfApplication.Views.Base"
                    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">

    <!-- Represents content (xaml) of base view -->
    <Style x:Key="BaseViewStyle" TargetType="{x:Type views:BaseView}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:BaseView}">
                    <Border Background="#fff">
                        <telerik:RadBusyIndicator
                            telerik:StyleManager.Theme="Windows11"
                            Visibility="Visible"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            IsBusy="{Binding Path=IsLoading}"
                            BusyContent="Loading..">

                            <!-- Content of view, which inherits BaseView  -->
                            <ContentPresenter />
                        </telerik:RadBusyIndicator>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>

