<Window x:Class="Calibrator.WpfApplication.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:scButton="clr-namespace:Calibrator.WpfApplication.Views.Components.ScButton"
        xmlns:uniTable="clr-namespace:Calibrator.WpfApplication.Views.Components.UniTable"
        xmlns:vm="clr-namespace:Calibrator.WpfApplication.ViewModels"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel, IsDesignTimeCreatable=False}"
        mc:Ignorable="d"
        Title="Service Calibrator - WPF Demo" Height="700" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!-- Menu -->
        <DockPanel Grid.Row="0" VerticalAlignment="Center" Margin="0,10,0,0">
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Margin="0,0,20,0" VerticalAlignment="Center">
                <Label Content="{Binding LoggedUserName}" FontSize="14" Margin="0,0,10,0" />
            </StackPanel>

            <Image DockPanel.Dock="Left"
                   Height="40"
                   Margin="10,0,10,0"
                   VerticalAlignment="Center"
                   Source="pack://application:,,,/Calibrator.WpfApplication;component/Images/atlas-copco-group-logo.png" />

            <telerik:RadMenu
                VerticalAlignment="Top"
                Visibility="Visible"
                telerik:StyleManager.Theme="Windows11">
                <telerik:RadMenuItem Header="Dashboard" />
                <telerik:RadMenuItem Header="Devices">
                    <telerik:RadMenuItem Header="Controllers" Command="{Binding OpenControllersCommand}" />
                    <telerik:RadMenuItem Header="Measuring instruments"
                                         Command="{Binding OpenMeasuringInstrumentsCommand}" />
                    <telerik:RadMenuItem Header="Transducers" Command="{Binding OpenTransducersCommand}" />
                    <telerik:RadMenuItem Header="Equipment Templates" Command="{Binding OpenEquipmentTemplatesCommand}" />
                    <telerik:RadMenuItem Header="Equipments" Command="{Binding OpenEquipmentsCommand}" />
                </telerik:RadMenuItem>
                <telerik:RadMenuItem Header="Processes"/>
                <telerik:RadMenuItem Header="Settings" />
            </telerik:RadMenu>
        </DockPanel>

        <!-- Action Buttons -->
        <UniformGrid Grid.Row="2" Rows="1" Columns="6" VerticalAlignment="Top" Margin="0,20,0,0">
            <scButton:ScButtonComponent Content="Start New" ButtonType="Regular" Command="{Binding ShowMessageCommand}" />
            <scButton:ScButtonComponent Content="Filters" ButtonType="Regular" Command="{Binding ShowMessageCommand}" />
            <scButton:ScButtonComponent Content="Refresh" ButtonType="Regular" IconKind="Refresh" Command="{Binding ShowMessageCommand}" />
            <scButton:ScButtonComponent Content="Clone" ButtonType="Regular" IconKind="ContentCopy" Command="{Binding ShowMessageCommand}" />
            <scButton:ScButtonComponent Content="Import" ButtonType="Regular" IconKind="ArrowDown" Command="{Binding ShowMessageCommand}" />
            <scButton:ScButtonComponent Content="Export" ButtonType="Regular" IconKind="ArrowUp" Command="{Binding ShowMessageCommand}" />
        </UniformGrid>

        <!-- Data Grid -->
        <Grid Grid.Row="3" VerticalAlignment="Top" Margin="0,15,0,0">
            <telerik:RadBusyIndicator
                telerik:StyleManager.Theme="Windows11"
                IsBusy="{Binding IsLoading}"
                BusyContent="Loading...">
                <uniTable:UniTableComponent
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    ItemsSource="{Binding Calibrations}"
                    Columns="{Binding Columns}"
                    TableOperations="{Binding TableOperations}">
                </uniTable:UniTableComponent>
            </telerik:RadBusyIndicator>
        </Grid>
    </Grid>
</Window>

