<base:BaseView
    Style="{StaticResource BaseViewStyle}"
    x:Class="Calibrator.WpfApplication.Views.Dialogs.EditControllerDialogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:vm="clr-namespace:Calibrator.WpfApplication.ViewModels"
    xmlns:scTextBox="clr-namespace:Calibrator.WpfApplication.Views.Components.ScTextBox"
    xmlns:scButton="clr-namespace:Calibrator.WpfApplication.Views.Components.ScButton"
    xmlns:scDropdown="clr-namespace:Calibrator.WpfApplication.Views.Components.ScDropdown"
    xmlns:base="clr-namespace:Calibrator.WpfApplication.Views.Base"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=vm:EditControllerDialogViewModel, IsDesignTimeCreatable=False}"
    Width="730"
    Height="570">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="General" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,30">
            <scTextBox:ScTextBoxComponent
                Margin="0,0,30,0" LabelText="Name"
                TextBoxText="{Binding Name}" />
            <scTextBox:ScTextBoxComponent
                Margin="0,0,30,0"
                LabelText="Serial Number"
                TextBoxText="{Binding SerialNumber}" />
            <scTextBox:ScTextBoxComponent
                Margin="0,0,30,0" LabelText="Identifier"
                TextBoxText="{Binding Identifier}" />
            <scDropdown:ScDropdownComponent
                LabelText="Controller Type"
                Items="{Binding AllControllerTypes}"
                SelectedItem="{Binding SelectedControllerType}"
                DropdownWidth="180" />
        </StackPanel>

        <TextBlock Grid.Row="2" Text="Connection Settings" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" />

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,30">
            <scDropdown:ScDropdownComponent
                LabelText="Connection"
                Items="{Binding AllConnectionMethods}"
                SelectedItem="{Binding SelectedConnectionMethod}"
                DropdownWidth="180" />
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <scButton:ScButtonComponent Content="Confirm" ButtonType="Accent" ButtonWidth="100"
                                        Margin="0,0,20,0"
                                        Command="{Binding SaveCommand}" />
            <scButton:ScButtonComponent Content="Cancel" ButtonType="Transparent" ButtonWidth="75"
                                        Command="{Binding CloseCommand}" />
        </StackPanel>
    </Grid>
</base:BaseView>


