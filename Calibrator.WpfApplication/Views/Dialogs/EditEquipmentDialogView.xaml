<views:BaseView
    Style="{StaticResource BaseViewStyle}"
    x:Class="Calibrator.WpfApplication.Views.Dialogs.EditEquipmentDialogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:vm="clr-namespace:Calibrator.WpfApplication.ViewModels"
    xmlns:scTextBox="clr-namespace:Calibrator.WpfApplication.Views.Components.ScTextBox"
    xmlns:scButton="clr-namespace:Calibrator.WpfApplication.Views.Components.ScButton"
    xmlns:scDropdown="clr-namespace:Calibrator.WpfApplication.Views.Components.ScDropdown"
    xmlns:scDivider="clr-namespace:Calibrator.WpfApplication.Views.Components.ScDivider"
    xmlns:views="clr-namespace:Calibrator.WpfApplication.Views.Base"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=vm:EditEquipmentDialogViewModel, IsDesignTimeCreatable=False}"
    Width="730"
    Height="750">
    <Grid>
        <Grid.Resources>
            <Style TargetType="Border">
                <Setter Property="Padding" Value="10 0 0 0" />
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <scDivider:ScDividerComponent Grid.Row="0" Margin="10 30 10 30" Text="General"></scDivider:ScDividerComponent>

        <Border Grid.Row="1">
            <StackPanel Orientation="Horizontal">
                <scTextBox:ScTextBoxComponent
                    Margin="0 0 30 0"
                    LabelText="Serial Number"
                    TextBoxText="{Binding SerialNumber}">
                </scTextBox:ScTextBoxComponent>
                <scTextBox:ScTextBoxComponent
                    Margin="0 0 30 0" LabelText="Identifier"
                    TextBoxText="{Binding Identifier}">
                </scTextBox:ScTextBoxComponent>
                <scDropdown:ScDropdownComponent
                    LabelText="Measurement unit"
                    Items="{Binding AllUnits}"
                    SelectedItem="{Binding SelectedMeasurementUnit}"
                    DropdownWidth="180">
                </scDropdown:ScDropdownComponent>
            </StackPanel>
        </Border>
        
        <scDivider:ScDividerComponent Grid.Row="2" Margin="10 30 10 30" Text="Template"></scDivider:ScDividerComponent>
        
        <Border Grid.Row="3">
            <StackPanel Orientation="Horizontal">
                <scDropdown:ScDropdownComponent
                    LabelText="Template"
                    Items="{Binding AllEquipmentTemplates}"
                    SelectedItem="{Binding SelectedEquipmentTemplate}"
                    DropdownWidth="180"
                    DisplayMemberPath="Name"
                    IsEnabled="{Binding IsEquipmentCreationMode}">
                </scDropdown:ScDropdownComponent>
            </StackPanel>
        </Border>

        <scDivider:ScDividerComponent Grid.Row="4" Margin="10 30 10 30" Text="Capacity"></scDivider:ScDividerComponent>

        <Border Grid.Row="5">
            <StackPanel Orientation="Horizontal">
                <scTextBox:ScTextBoxComponent
                    Margin="0 0 30 0" LabelText="Minimum torque"
                    TextBoxText="{Binding MinimumTorque}">
                </scTextBox:ScTextBoxComponent>
                <scTextBox:ScTextBoxComponent
                    Margin="0 0 30 0" LabelText="Maximum torque"
                    TextBoxText="{Binding MaximumTorque}">
                </scTextBox:ScTextBoxComponent>
                <scTextBox:ScTextBoxComponent
                    Margin="0 0 30 0" LabelText="Minimum angle"
                    TextBoxText="{Binding MinimumAngle}">
                </scTextBox:ScTextBoxComponent>
                <scTextBox:ScTextBoxComponent
                    Margin="0 0 30 0" LabelText="Maximum angle"
                    TextBoxText="{Binding MaximumAngle}">
                </scTextBox:ScTextBoxComponent>
            </StackPanel>
        </Border>

        <Border Grid.Row="6">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                        Margin="0 0 0 50">
                <scButton:ScButtonComponent Content="Confirm" ButtonType="Accent" ButtonWidth="100"
                                            Margin="0 0 150 0"
                                            Command="{Binding SaveCommand}" />
                <scButton:ScButtonComponent Content="Cancel" ButtonType="Transparent" ButtonWidth="75"
                                            Command="{Binding CloseCommand}" />
            </StackPanel>
        </Border>
    </Grid>
</views:BaseView>