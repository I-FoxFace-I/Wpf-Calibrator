<Window x:Class="Calibrator.WpfApplication.Views.DashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:scButton="clr-namespace:Calibrator.WpfApplication.Views.Components.ScButton"
        xmlns:uniTable="clr-namespace:Calibrator.WpfApplication.Views.Components.UniTable"
        xmlns:scTextBox="clr-namespace:Calibrator.WpfApplication.Views.Components.ScTextBox"
        xmlns:scCheckBox="clr-namespace:Calibrator.WpfApplication.Views.Components.ScCheckBox"
        xmlns:scMenu="clr-namespace:Calibrator.WpfApplication.Views.Components.ScMenu"
        xmlns:vm="clr-namespace:Calibrator.WpfApplication.ViewModels"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        d:DataContext="{d:DesignInstance Type=vm:DashboardViewModel, IsDesignTimeCreatable=False}"
        mc:Ignorable="d"
        Title="Service Calibrator" Height="700" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid>
            <scMenu:ScMenuComponent Margin="0 10 0 0"/>
        </Grid>

        <!-- <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" -->
        <!--             Margin="0 50 0 0"> -->
        <!--     <scCheckBox:ScCheckBoxComponent Margin="0 0 10 0"></scCheckBox:ScCheckBoxComponent> -->
        <!--     <scTextBox:ScTextBoxComponent Width="220" /> -->
        <!--     <scButton:ScButtonComponent Content="Add Column" ButtonType="Regular" IconKind="Plus" ButtonWidth="160" -->
        <!--                                 Margin="15 0 30 0" /> -->
        <!-- </StackPanel> -->

        <UniformGrid Grid.Row="2" Rows="1" Columns="7" VerticalAlignment="Top" Margin="0 100 0 0">
            <scButton:ScButtonComponent Content="Start New" ButtonType="Regular" Command="{Binding WorksCommand}" />
            <scButton:ScButtonComponent Content="Filters" ButtonType="Regular" />
            <scButton:ScButtonComponent Content="Refresh" ButtonType="Regular" IconKind="Refresh" />
            <scButton:ScButtonComponent Content="Clone" ButtonType="Regular" IconKind="Harddisk" />
            <scButton:ScButtonComponent Content="Import" ButtonType="Regular" IconKind="ArrowDown" />
            <scButton:ScButtonComponent Content="Export" ButtonType="Regular" IconKind="ArrowUp" />
        </UniformGrid>

        <Grid Grid.Row="3" VerticalAlignment="Top" Margin="0 15 0 0">
            <uniTable:UniTableComponent
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                ItemsSource="{Binding Calibrations, Mode=TwoWay}"
                Columns="{Binding Columns, Mode=TwoWay}"
                TableOperations="{Binding TableOperations}">
            </uniTable:UniTableComponent>
        </Grid>
    </Grid>
</Window>
