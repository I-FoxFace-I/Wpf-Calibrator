<local:ScopedWindow xmlns:local="clr-namespace:WpfEngine.Demo.Views"
                    x:Class="WpfEngine.Demo.Views.ProductDetailSelectorWindow"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    Title="Product Detail - Add to Order"
                    Width="600" Height="700"
                    WindowStartupLocation="CenterOwner"
                    Background="#F8F9FA">

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#8B5CF6" 
                CornerRadius="12" 
                Padding="24"
                Margin="0,0,0,24">
            <StackPanel>
                <TextBlock Text="ðŸ“¦ Product Detail" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock Text="View details and add to shared order" 
                           FontSize="14" 
                           Foreground="#EDE9FE"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Shared Order Info -->
        <Border Grid.Row="1"
                Background="#DBEAFE"
                BorderBrush="#3B82F6"
                BorderThickness="2"
                CornerRadius="8"
                Padding="16"
                Margin="0,0,0,24">
            <StackPanel>
                <TextBlock Text="ðŸ“‹ Shared Workflow State" 
                           FontSize="12" 
                           FontWeight="Bold"
                           Foreground="#1E40AF"
                           Margin="0,0,0,4"/>
                <TextBlock Text="{Binding CurrentOrderInfo}" 
                           FontSize="11"
                           Foreground="#1E40AF"/>
                <TextBlock Text="â˜… Same IOrderBuilderService instance as workflow host!" 
                           FontSize="10"
                           Foreground="#60A5FA"
                           FontStyle="Italic"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Product Details -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Product Name -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="20"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="{Binding Product.Name}" 
                                   FontSize="22" 
                                   FontWeight="Bold" 
                                   Foreground="#1E293B"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding CategoryName}" 
                                   FontSize="14" 
                                   Foreground="#8B5CF6"
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>

                <!-- Price & Stock -->
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" 
                            Background="White" 
                            CornerRadius="8" 
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="Price" 
                                       FontSize="12" 
                                       Foreground="#64748B" 
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding Product.Price, StringFormat=C}" 
                                       FontSize="28" 
                                       FontWeight="Bold" 
                                       Foreground="#10B981"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" 
                            Background="White" 
                            CornerRadius="8" 
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="Availability" 
                                       FontSize="12" 
                                       Foreground="#64748B" 
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding StockStatus}" 
                                       FontSize="16" 
                                       FontWeight="SemiBold">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsInStock}" Value="True">
                                                <Setter Property="Foreground" Value="#10B981"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsInStock}" Value="False">
                                                <Setter Property="Foreground" Value="#EF4444"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Description -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="20"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Description" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Foreground="#1E293B"
                                   Margin="0,0,0,12"/>
                        <TextBlock Text="{Binding Product.Description}" 
                                   FontSize="14" 
                                   Foreground="#64748B"
                                   TextWrapping="Wrap"
                                   LineHeight="22"/>
                    </StackPanel>
                </Border>

                <!-- Add to Order -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="Add to Order" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,12"/>
                        
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Quantity:" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,12,0"/>
                            <TextBox Text="{Binding QuantityToAdd, UpdateSourceTrigger=PropertyChanged}"
                                     Width="80"
                                     Padding="8"
                                     VerticalContentAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Actions -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="Close" 
                    Command="{Binding CloseWindowCommand}"
                    Padding="20,12"
                    Margin="0,0,12,0"
                    Background="White"
                    BorderBrush="#CBD5E1"
                    BorderThickness="1"
                    Foreground="#64748B"
                    FontWeight="SemiBold"
                    Cursor="Hand"/>
            
            <Button Content="âž• Add to Order" 
                    Command="{Binding AddToOrderCommand}"
                    Padding="20,12"
                    Background="#10B981"
                    Foreground="White"
                    BorderThickness="0"
                    FontWeight="SemiBold"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</local:ScopedWindow>
