<UserControl x:Class="Calibrator.WpfControl.Demo.Views.ButtonsDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:scButton="clr-namespace:Calibrator.WpfControl.Controls.ScButton;assembly=Calibrator.WpfControl"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks">
    <StackPanel>
        <TextBlock Text="ScButton Component" 
                   FontSize="{StaticResource Calibrator.FontSize.XLarge}"
                   FontWeight="Bold"
                   Margin="0 0 0 20"/>

        <TextBlock Text="Regular Button:" 
                   FontSize="{StaticResource Calibrator.FontSize.Large}"
                   Margin="0 0 0 10"/>
        
        <scButton:ScButtonComponent 
            Content="Regular Button"
            ButtonType="Regular"
            Command="{Binding ButtonClickCommand}"/>

        <TextBlock Text="Accent Button:" 
                   FontSize="{StaticResource Calibrator.FontSize.Large}"
                   Margin="0 30 0 10"/>
        
        <scButton:ScButtonComponent 
            Content="Accent Button"
            ButtonType="Accent"
            Command="{Binding ButtonClickCommand}"/>

        <TextBlock Text="Transparent Button:" 
                   FontSize="{StaticResource Calibrator.FontSize.Large}"
                   Margin="0 30 0 10"/>
        
        <scButton:ScButtonComponent 
            Content="Transparent Button"
            ButtonType="Transparent"
            Command="{Binding ButtonClickCommand}"/>

        <TextBlock Text="Button with Icon:" 
                   FontSize="{StaticResource Calibrator.FontSize.Large}"
                   Margin="0 30 0 10"/>
        
        <scButton:ScButtonComponent 
            Content="Save"
            ButtonType="Transparent"
            IconKind="ContentSave"
            Command="{Binding ButtonClickCommand}"/>

        <TextBlock Text="Button without Uppercase:" 
                   FontSize="{StaticResource Calibrator.FontSize.Large}"
                   Margin="0 30 0 10"/>
        
        <scButton:ScButtonComponent 
            Content="Normal Case"
            ButtonType="Transparent"
            UppercaseText="False"
            Command="{Binding ButtonClickCommand}"/>

        <TextBlock Text="Custom Size Button:" 
                   FontSize="{StaticResource Calibrator.FontSize.Large}"
                   Margin="0 30 0 10"/>
        
        <scButton:ScButtonComponent 
            Content="Large Button"
            ButtonType="Transparent"
            ButtonWidth="200"
            ButtonHeight="50"
            Command="{Binding ButtonClickCommand}"/>

        <!--<Border Background="{StaticResource Calibrator.Brush.Surface}"
                Padding="15"
                CornerRadius="4"
                Margin="0 30 0 0">
            <StackPanel>
                <TextBlock Text="Button Types:" FontWeight="Bold" Margin="0 0 0 10"/>
                <TextBlock Text="• Regular: Default button style with light background" TextWrapping="Wrap"/>
                <TextBlock Text="• Accent: Primary action button with dark background" TextWrapping="Wrap"/>
                <TextBlock Text="• Transparent: Secondary action with transparent background" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>-->
    </StackPanel>
</UserControl>
