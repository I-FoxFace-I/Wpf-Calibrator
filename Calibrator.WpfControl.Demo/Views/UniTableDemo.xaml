<UserControl x:Class="Calibrator.WpfControl.Demo.Views.UniTableDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:uniTable="clr-namespace:Calibrator.WpfControl.Controls.UniTable;assembly=Calibrator.WpfControl">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="UniTable Component - Filtering &amp; Sorting" 
                   FontSize="{StaticResource Calibrator.FontSize.XLarge}"
                   FontWeight="Bold"
                   Margin="0 0 0 20"/>

        <!-- Filtering Controls -->
        <Border Grid.Row="1"
                Background="{StaticResource Calibrator.Brush.Surface}"
                Padding="15"
                CornerRadius="4"
                Margin="0 0 0 20">
            <StackPanel>
                <TextBlock Text="Filtering Controls:" FontWeight="Bold" Margin="0 0 0 10"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               Text="Filter by Name:" 
                               VerticalAlignment="Center"
                               Margin="0 0 10 0"/>
                    
                    <TextBox Grid.Column="1"
                             x:Name="NameFilterTextBox"
                             Padding="5"
                             TextChanged="OnFilterTextChanged"/>
                    
                    <Button Grid.Column="3"
                            Content="Clear Filters"
                            Click="ClearFilters"
                            Style="{StaticResource TransparentButton}"
                            Padding="10 5"/>
                </Grid>

                <StackPanel Orientation="Horizontal" Margin="0 15 0 0">
                    <TextBlock Text="Sort by:" 
                               VerticalAlignment="Center"
                               Margin="0 0 10 0"/>
                    <Button Content="Name ↑" 
                            Click="SortByNameAsc"
                            Style="{StaticResource TransparentButton}"
                            Padding="10 5"
                            Margin="0 0 10 0"/>
                    <Button Content="Name ↓" 
                            Click="SortByNameDesc"
                            Style="{StaticResource TransparentButton}"
                            Padding="10 5"
                            Margin="0 0 10 0"/>
                    <Button Content="Age ↑" 
                            Click="SortByAgeAsc"
                            Style="{StaticResource TransparentButton}"
                            Padding="10 5"
                            Margin="0 0 10 0"/>
                    <Button Content="Age ↓" 
                            Click="SortByAgeDesc"
                            Style="{StaticResource TransparentButton}"
                            Padding="10 5"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- UniTable -->
        <uniTable:UniTableComponent 
            Grid.Row="2"
            Columns="{Binding Columns}"
            ItemsSource="{Binding People}"
            TableOperations="{Binding TableOperations}"
            EnableFiltering="True"
            EnableSorting="True"
            Filters="{Binding Filters}"
            Sort="{Binding Sort}"/>
    </Grid>
</UserControl>
