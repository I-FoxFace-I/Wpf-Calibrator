<Window x:Class="Calibrator.WpfControl.Demo.Views.EquipmentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:uniForm="clr-namespace:Calibrator.WpfControl.Controls.UniForm;assembly=Calibrator.WpfControl"
        xmlns:scButton="clr-namespace:Calibrator.WpfControl.Controls.ScButton;assembly=Calibrator.WpfControl"
        Title="{Binding DialogTitle}" 
        Height="600" 
        Width="800"
        Background="{StaticResource Calibrator.Brush.Background}"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="{StaticResource Calibrator.Padding.Large}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Dynamic Form -->
        <ScrollViewer Grid.Row="0" 
                      VerticalScrollBarVisibility="Auto"
                      Margin="0 0 0 20">
            <uniForm:UniFormContainer
                Fields="{Binding FormFields}"
                DataContext="{Binding Equipment}"
                Columns="2"
                HorizontalSpacing="20"
                VerticalSpacing="20"/>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <scButton:ScButtonComponent
                Content="Save"
                ButtonType="Accent"
                IconKind="ContentSave"
                Command="{Binding SaveCommand}"
                Margin="0 0 10 0"
                ButtonWidth="120"/>

            <scButton:ScButtonComponent
                Content="Cancel"
                ButtonType="Transparent"
                IconKind="Close"
                Command="{Binding CancelCommand}"
                ButtonWidth="120"/>
        </StackPanel>
    </Grid>
</Window>