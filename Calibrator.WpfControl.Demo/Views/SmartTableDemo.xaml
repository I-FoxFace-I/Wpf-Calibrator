<UserControl x:Class="Calibrator.WpfControl.Demo.Views.SmartTableDemo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:smartTable="clr-namespace:Calibrator.WpfControl.Controls.ScSmartTable;assembly=Calibrator.WpfControl"
             xmlns:scButton="clr-namespace:Calibrator.WpfControl.Controls.ScButton;assembly=Calibrator.WpfControl">

    <Grid Margin="{StaticResource Calibrator.Padding.Large}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="SmartTable Component - Enhanced Filtering Demo" 
                   FontSize="{StaticResource Calibrator.FontSize.XLarge}"
                   FontWeight="Bold"
                   Margin="0 0 0 20"/>

        <!-- Description -->
        <Border Grid.Row="1"
                Background="{StaticResource Calibrator.Brush.Surface}"
                Padding="{StaticResource Calibrator.Padding.Medium}"
                CornerRadius="{StaticResource Calibrator.CornerRadius.Medium}"
                Margin="0 0 0 20">
            <StackPanel>
                <TextBlock Text="Enhanced SmartTable Features:" 
                           FontWeight="Bold" 
                           FontSize="{StaticResource Calibrator.FontSize.Large}"
                           Margin="0 0 0 10"/>
                <TextBlock TextWrapping="Wrap">
                    <Run Text="• "/>
                    <Run Text="Filtering controls are now directly in column headers (FilterRow mode)" FontWeight="SemiBold"/>
                </TextBlock>
                <TextBlock TextWrapping="Wrap">
                    <Run Text="• "/>
                    <Run Text="No drag &amp; drop panel - cleaner interface"/>
                </TextBlock>
                <TextBlock TextWrapping="Wrap">
                    <Run Text="• "/>
                    <Run Text="Per-column filter operators configured in code (see SmartTableColumn definition)"/>
                </TextBlock>
                <TextBlock TextWrapping="Wrap">
                    <Run Text="• "/>
                    <Run Text="Text columns: Contains, Starts With, Is Equal To"/>
                </TextBlock>
                <TextBlock TextWrapping="Wrap">
                    <Run Text="• "/>
                    <Run Text="Numeric columns: Equals, Greater Than, Less Than, etc."/>
                </TextBlock>
                <TextBlock TextWrapping="Wrap">
                    <Run Text="• "/>
                    <Run Text="Date columns: Is On, Is After, Is Before"/>
                </TextBlock>
                <TextBlock TextWrapping="Wrap">
                    <Run Text="• "/>
                    <Run Text="Boolean columns: Is True, Is False"/>
                </TextBlock>
                <TextBlock TextWrapping="Wrap" Margin="0 10 0 0" FontStyle="Italic">
                    <Run Text="Try filtering by Name (contains), Age (greater than 30), City (equals), or Active status!"/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    Margin="0 0 0 20">
            <scButton:ScButtonComponent
                Content="Add Person"
                ButtonType="Accent"
                IconKind="Plus"
                Command="{Binding AddPersonCommand}"
                Margin="0 0 10 0"
                ButtonWidth="150"/>

            <scButton:ScButtonComponent
                Content="Clear Filters"
                ButtonType="Regular"
                IconKind="FilterRemove"
                Command="{Binding ClearFiltersCommand}"
                Margin="0 0 10 0"
                ButtonWidth="150"/>

            <scButton:ScButtonComponent
                Content="Refresh"
                ButtonType="Transparent"
                IconKind="Refresh"
                Command="{Binding RefreshCommand}"
                ButtonWidth="150"/>
        </StackPanel>

        <!-- SmartTable with enhanced filtering -->
        <smartTable:ScSmartTableComponent 
            x:Name="SmartTable"
            Grid.Row="3"
            Columns="{Binding Columns}"
            ItemsSource="{Binding People}"
            TableOperations="{Binding TableOperations}"
            EnableFiltering="True"
            EnableSorting="True"
            EnableGrouping="False"
            EnableColumnReordering="True"
            EnableColumnFreezing="True"
            ShowColumnFooters="False"
            ShowSearchPanel="False"
            FilteringMode="FilterRow"/>

        <!-- 
            Key Properties:
            - EnableFiltering="True" - Enables filtering (columns control which operators via SmartTableColumn)
            - EnableSorting="True" - Enables column sorting
            - EnableGrouping="False" - Hides the group panel (set to True to show)
            - FilteringMode is set to "FilterRow" in the control itself (filters in headers)
        -->
    </Grid>
</UserControl>
