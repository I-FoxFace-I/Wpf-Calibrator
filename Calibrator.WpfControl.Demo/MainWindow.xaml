<Window x:Class="Calibrator.WpfControl.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Calibrator WPF Controls Demo" Height="700" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Navigation Menu -->
        <Border Grid.Column="0" 
                Background="{StaticResource Calibrator.Brush.Surface}"
                Padding="{StaticResource Calibrator.Padding.Medium}">
            <StackPanel>
                <TextBlock Text="Components" 
                           FontSize="{StaticResource Calibrator.FontSize.Large}"
                           FontWeight="Bold"
                           Foreground="{StaticResource Calibrator.Brush.PrimaryDark}"
                           Margin="0 0 0 20"/>
                
                <Button Content="Buttons" 
                        Click="ShowButtonsDemo"
                        Margin="0 0 0 10"/>
                
                <Button Content="TextBox" 
                        Click="ShowTextBoxDemo"
                        Margin="0 0 0 10"/>
                
                <Button Content="TextBlock" 
                        Click="ShowTextBlockDemo"
                        Margin="0 0 0 10"/>
                
                <Button Content="Numeric" 
                        Click="ShowNumericDemo"
                        Margin="0 0 0 10"/>
                
                <Button Content="Dropdown" 
                        Click="ShowDropdownDemo"
                        Margin="0 0 0 10"/>
                
                <Button Content="UniTable" 
                        Click="ShowUniTableDemo"
                        Margin="0 0 0 10"/>
                
                <Button Content="SmartTable" 
                        Click="ShowSmartTableDemo"
                        Margin="0 0 0 10"/>
                
                <Button Content="UniForm" 
                        Click="ShowUniFormDemo"
                        Margin="0 0 0 10"/>
                
                <Button Content="SmartContainer" 
                        Click="ShowSmartContainerDemo"
                        Margin="0 0 0 10"/>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <ScrollViewer Grid.Column="1" 
                      VerticalScrollBarVisibility="Auto"
                      Padding="{StaticResource Calibrator.Padding.Large}">
            <ContentControl x:Name="ContentArea"/>
        </ScrollViewer>
    </Grid>
</Window>
