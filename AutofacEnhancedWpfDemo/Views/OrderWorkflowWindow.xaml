<local:ScopedWindow xmlns:local="clr-namespace:AutofacEnhancedWpfDemo.Views"
                    x:Class="AutofacEnhancedWpfDemo.Views.OrderWorkflowWindow"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:AutofacEnhancedWpfDemo.Converters" 
                    xmlns:viewmodels="clr-namespace:AutofacEnhancedWpfDemo.ViewModels" 
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    Title="Order Creation Workflow"
                    Width="900" Height="1200"
                    WindowStartupLocation="CenterScreen"
                    Background="#F8F9FA">

    <local:ScopedWindow.Resources>
        <!-- Step Visibility Converter -->
        <ResourceDictionary>
            <converters:StepVisibilityConverter x:Key="StepVisibilityConverter"/>

            <Style TargetType="Button" x:Key="WorkflowButton">
                <Setter Property="Padding" Value="20,12"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Background" Value="#3B82F6"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Margin" Value="0,0,8,0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#2563EB"/>
                    </Trigger>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="Background" Value="#CBD5E1"/>
                        <Setter Property="Cursor" Value="Arrow"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style TargetType="Button" x:Key="SecondaryButton" BasedOn="{StaticResource WorkflowButton}">
                <Setter Property="Background" Value="#6B7280"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#4B5563"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style TargetType="Button" x:Key="SuccessButton" BasedOn="{StaticResource WorkflowButton}">
                <Setter Property="Background" Value="#10B981"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#059669"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>

    </local:ScopedWindow.Resources>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="ðŸ›’ Order Creation Workflow"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#1E293B"/>
            <TextBlock Text="Follow the steps to create a new order"
                       FontSize="14"
                       Foreground="#64748B"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Progress Steps -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="8"
                Padding="24"
                Margin="0,0,0,16">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.05" BlurRadius="10" ShadowDepth="0"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Step 1 -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <Ellipse Width="40" Height="40" Margin="0,0,0,8">
                        <Ellipse.Fill>
                            <SolidColorBrush Color="{Binding CurrentStep, Converter={StaticResource StepColorConverter}, ConverterParameter=1}"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock Text="1. Select Customer"
                               FontSize="14"
                               FontWeight="SemiBold"
                               TextAlignment="Center"/>
                </StackPanel>

                <!-- Step 2 -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <Ellipse Width="40" Height="40" Margin="0,0,0,8">
                        <Ellipse.Fill>
                            <SolidColorBrush Color="{Binding CurrentStep, Converter={StaticResource StepColorConverter}, ConverterParameter=2}"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock Text="2. Add Products"
                               FontSize="14"
                               FontWeight="SemiBold"
                               TextAlignment="Center"/>
                </StackPanel>

                <!-- Step 3 -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <Ellipse Width="40" Height="40" Margin="0,0,0,8">
                        <Ellipse.Fill>
                            <SolidColorBrush Color="{Binding CurrentStep, Converter={StaticResource StepColorConverter}, ConverterParameter=3}"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock Text="3. Review Confirm"
                               FontSize="14"
                               FontWeight="SemiBold"
                               TextAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content Area -->
        <Border Grid.Row="2"
                Background="White"
                CornerRadius="8"
                Padding="24">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.05" BlurRadius="10" ShadowDepth="0"/>
            </Border.Effect>

            <Grid>
                <!-- Step 1: Select Customer -->
                <StackPanel Visibility="{Binding CurrentStep, Converter={StaticResource StepVisibilityConverter}, ConverterParameter=1}">
                    <TextBlock Text="Select a customer for this order:"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Margin="0,0,0,16"/>
                    <ListBox ItemsSource="{Binding Customers}"
                             SelectedItem="{Binding SelectedCustomer}"
                             Height="400">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="8">
                                    <TextBlock Text="{Binding Name}"
                                               FontSize="16"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Email}"
                                               FontSize="14"
                                               Foreground="#64748B"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>

                <!-- Step 2: Add Products -->
                <Grid Visibility="{Binding CurrentStep, Converter={StaticResource StepVisibilityConverter}, ConverterParameter=2}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Available Products -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Available Products:"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,12"/>
                        <ListBox ItemsSource="{Binding Products}" Height="400">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Name}"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Price, StringFormat=C2}"
                                                       FontSize="13"
                                                       Foreground="#64748B"/>
                                        </StackPanel>
                                        <Button Grid.Column="1"
                                                Content="âž• Add"
                                                Command="{Binding DataContext.AddItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Padding="12,6"
                                                Background="#10B981"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Cursor="Hand"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>

                    <!-- Order Items -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Order Items:"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,12"/>
                        <DataGrid ItemsSource="{Binding OrderItems}"
                                  AutoGenerateColumns="False"
                                  Height="400"
                                  CanUserAddRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Product"
                                                    Binding="{Binding ProductName}"
                                                    Width="*"/>
                                <DataGridTextColumn Header="Qty"
                                                    Binding="{Binding Quantity}"
                                                    Width="50"/>
                                <DataGridTextColumn Header="Price"
                                                    Binding="{Binding UnitPrice, StringFormat=C2}"
                                                    Width="80"/>
                                <DataGridTemplateColumn Header="" Width="50">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="ðŸ—‘ï¸"
                                                    Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Background="#EF4444"
                                                    Foreground="White"
                                                    BorderThickness="0"
                                                    Padding="6"
                                                    Cursor="Hand"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Grid>

                <!-- Step 3: Review -->
                <StackPanel Visibility="{Binding CurrentStep, Converter={StaticResource StepVisibilityConverter}, ConverterParameter=3}">
                    <TextBlock Text="Order Summary:"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Margin="0,0,0,16"/>

                    <Border Background="#F8F9FA"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Customer:"
                                       FontSize="14"
                                       Foreground="#64748B"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding SelectedCustomer.Name}"
                                       FontSize="18"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>

                    <DataGrid ItemsSource="{Binding OrderItems}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              Height="300">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Product"
                                                Binding="{Binding ProductName}"
                                                Width="*"/>
                            <DataGridTextColumn Header="Quantity"
                                                Binding="{Binding Quantity}"
                                                Width="100"/>
                            <DataGridTextColumn Header="Unit Price"
                                                Binding="{Binding UnitPrice, StringFormat=C2}"
                                                Width="120"/>
                            <DataGridTextColumn Header="Total"
                                                Binding="{Binding Total, StringFormat=C2}"
                                                Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Border Background="#10B981"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,16,0,0">
                        <Grid>
                            <TextBlock Text="Order Total:"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding OrderTotal, StringFormat=C2}"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Navigation Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="â—€ Previous"
                    Command="{Binding PreviousStepCommand}"
                    Style="{StaticResource SecondaryButton}"/>
            <Button Content="Next â–¶"
                    Command="{Binding NextStepCommand}"
                    Style="{StaticResource WorkflowButton}"/>
            <Button Content="âœ“ Complete Order"
                    Command="{Binding CompleteOrderCommand}"
                    Style="{StaticResource SuccessButton}"/>
            <Button Content="âœ• Cancel"
                    Command="{Binding CancelOrderCommand}"
                    Style="{StaticResource SecondaryButton}"/>
        </StackPanel>
    </Grid>
</local:ScopedWindow>