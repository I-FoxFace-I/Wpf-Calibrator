<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="AutofacEnhancedWpfDemo.Views.Demo.DemoWorkflowStep2View"
             Background="White" av:DesignHeight="574.843" av:DesignWidth="977.898">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="🛒 Step 2: Add Products" 
                       FontSize="20" 
                       FontWeight="Bold"
                       Margin="0,0,0,8"/>
            <TextBlock><Run Text="Customer:" FontWeight="SemiBold"/><Run Text=" "/><Run Text="{Binding CustomerName, Mode=OneWay}" Foreground="#10B981"/></TextBlock>
        </StackPanel>

        <!-- Products and Cart -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Available Products -->
            <Border Grid.Column="0" 
                    BorderBrush="#E5E7EB" 
                    BorderThickness="1" 
                    CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Background="#F9FAFB" 
                            Padding="12"
                            BorderBrush="#E5E7EB"
                            BorderThickness="0,0,0,1">
                        <TextBlock Text="Available Products" 
                                   FontWeight="SemiBold"
                                   FontSize="14"/>
                    </Border>

                    <DataGrid x:Name="ProductsGrid"
                              Grid.Row="1" 
                              ItemsSource="{Binding Products}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=C2}" Width="80"/>
                            <DataGridTemplateColumn Header="" Width="60">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="➕" 
                                                Command="{Binding DataContext.AddItemCommand, ElementName=ProductsGrid, FallbackValue={x:Null}, UpdateSourceTrigger=PropertyChanged}" 
                                                CommandParameter="{Binding}"
                                                Padding="8,4"
                                                FontSize="14"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Order Items -->
            <Border Grid.Column="2" 
                    BorderBrush="#E5E7EB" 
                    BorderThickness="1" 
                    CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Background="#F9FAFB" 
                            Padding="12"
                            BorderBrush="#E5E7EB"
                            BorderThickness="0,0,0,1">
                        <TextBlock Text="Order Items" 
                                   FontWeight="SemiBold"
                                   FontSize="14"/>
                    </Border>

                    <DataGrid x:Name="OrderItemsGrid"
                              Grid.Row="1" 
                              ItemsSource="{Binding OrderItems}"
                              AutoGenerateColumns="False"
                              BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Product" Binding="{Binding ProductName}" Width="*"/>
                            <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="50"/>
                            <DataGridTextColumn Header="Price" Binding="{Binding UnitPrice, StringFormat=C2}" Width="70"/>
                            <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat=C2}" Width="70"/>
                            <DataGridTemplateColumn Header="" Width="50">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="🗑️" 
                                                Command="{Binding DataContext.RemoveItemCommand, ElementName=OrderItemsGrid, FallbackValue={x:Null}, UpdateSourceTrigger=PropertyChanged}"
                                                CommandParameter="{Binding}"
                                                Padding="6,4"
                                                FontSize="12"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Border Grid.Row="2" 
                            Background="#F0F9FF" 
                            Padding="12"
                            BorderBrush="#E5E7EB"
                            BorderThickness="0,1,0,0">
                        <TextBlock HorizontalAlignment="Right" 
                                   FontWeight="Bold"
                                   FontSize="16"><Run Text="Total: "/><Run Text=" "/><Run Text="{Binding OrderTotal, Mode=OneWay, StringFormat=C2}" Foreground="#10B981"/></TextBlock>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Navigation -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="◀ Back" 
                    Command="{Binding BackCommand}"
                    Padding="20,12"
                    Margin="0,0,12,0"/>
            <Button Content="Next ▶" 
                    Command="{Binding NextCommand}"
                    Padding="20,12"
                    Background="#10B981"
                    Foreground="White"
                    FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
</UserControl>