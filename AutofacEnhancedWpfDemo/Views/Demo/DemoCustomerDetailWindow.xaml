<!-- ========== DEMO CUSTOMER DETAIL WINDOW ========== -->

<local:ScopedWindow xmlns:local="clr-namespace:AutofacEnhancedWpfDemo.Views"
                    x:Class="AutofacEnhancedWpfDemo.Views.Demo.DemoCustomerDetailWindow"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:demo="clr-namespace:AutofacEnhancedWpfDemo.Models.Demo"
                    Title="Customer Detail"
                    Width="700" Height="700"
                    WindowStartupLocation="CenterOwner"
                    Background="#F8F9FA">

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="👤 Customer Details" 
                   FontSize="24" 
                   FontWeight="Bold"
                   Margin="0,0,0,24"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Basic Info -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="20"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Basic Information" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,16"/>

                        <TextBlock Text="Name *" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="0,0,0,12"/>

                        <TextBlock Text="Email *" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="0,0,0,12"/>

                        <TextBlock Text="Phone" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="0,0,0,12"/>

                        <TextBlock Text="Customer Type" Margin="0,0,0,4"/>
                        <ComboBox SelectedItem="{Binding Type}" 
                                  Margin="0,0,0,12">
                            <ComboBox.ItemsSource>
                                <x:Array Type="{x:Type demo:CustomerType}">
                                    <demo:CustomerType>Individual</demo:CustomerType>
                                    <demo:CustomerType>Business</demo:CustomerType>
                                </x:Array>
                            </ComboBox.ItemsSource>
                        </ComboBox>

                        <TextBlock Text="Company Name" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding CompanyName, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="0,0,0,12"/>

                        <TextBlock Text="Tax ID" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding TaxId, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </Border>

                <!-- Addresses -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="📍 Addresses" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,16"/>

                        <ItemsControl ItemsSource="{Binding Addresses}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F8F9FA" 
                                            CornerRadius="6" 
                                            Padding="12"
                                            Margin="0,0,0,8">
                                        <StackPanel>
                                            <TextBlock FontWeight="SemiBold" 
                                                       Text="{Binding Type}"/>
                                            <TextBlock Text="{Binding Street}"/>
                                            <TextBlock>
                                                <Run Text="{Binding City}"/>, 
                                                <Run Text="{Binding ZipCode}"/>
                                            </TextBlock>
                                            <TextBlock Text="{Binding Country}"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="Cancel" 
                    Command="{Binding CancelCommand}"
                    Padding="20,12"
                    Margin="0,0,12,0"/>
            <Button Content="Save Changes" 
                    Command="{Binding SaveCommand}"
                    Padding="20,12"
                    Background="#10B981"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</local:ScopedWindow>