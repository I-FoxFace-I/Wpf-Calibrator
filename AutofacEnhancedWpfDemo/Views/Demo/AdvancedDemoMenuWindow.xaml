<local:ScopedWindow xmlns:local="clr-namespace:AutofacEnhancedWpfDemo.Views"
                    x:Class="AutofacEnhancedWpfDemo.Views.Demo.AdvancedDemoMenuWindow"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    Title="⭐ Advanced Patterns Demo"
                    Width="600" Height="500"
                    WindowStartupLocation="CenterScreen"
                    Background="#F8F9FA">

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#9B59B6" 
                CornerRadius="12" 
                Padding="24"
                Margin="0,0,0,24">
            <StackPanel>
                <TextBlock Text="⭐ Advanced Patterns Demo" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock Text="INavigator + IWindowManager + Extended Models" 
                           FontSize="14" 
                           Foreground="#ECF0F1"
                           Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Menu -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <Button Content="👥 Demo Customer List → Detail View"
                    Command="{Binding OpenCustomerListCommand}"
                    Padding="20,16"
                    Margin="0,0,0,16"
                    Background="White"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Cursor="Hand"/>

            <Button Content="📦 Demo Product List → Detail View"
                    Command="{Binding OpenProductListCommand}"
                    Padding="20,16"
                    Margin="0,0,0,16"
                    Background="White"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Cursor="Hand"/>

            <Button Content="🚀 Workflow with INavigator"
                    Command="{Binding OpenWorkflowCommand}"
                    Padding="20,16"
                    Background="#10B981"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</local:ScopedWindow>