<local:ScopedWindow xmlns:local="clr-namespace:AutofacEnhancedWpfDemo.Views"
                    x:Class="AutofacEnhancedWpfDemo.Views.Demo.AdvancedDemoMenuWindow"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    Title="⭐ Advanced Patterns Demo"
                    Width="650" Height="600"
                    WindowStartupLocation="CenterScreen"
                    Background="#F8F9FA">

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#9B59B6" 
                CornerRadius="12" 
                Padding="24"
                Margin="0,0,0,24">
            <StackPanel>
                <TextBlock Text="⭐ Advanced Patterns Demo" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock Text="INavigator + IWindowManager + CQRS + Extended Models" 
                           FontSize="14" 
                           Foreground="#ECF0F1"
                           Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Menu -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <Button Content="👥 Customer Management"
                    Command="{Binding OpenCustomerListCommand}"
                    Padding="24,18"
                    Margin="0,0,0,16"
                    Background="White"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Cursor="Hand">
                <Button.Effect>
                    <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="12" ShadowDepth="0"/>
                </Button.Effect>
            </Button>

            <Button Content="📦 Product Management"
                    Command="{Binding OpenProductListCommand}"
                    Padding="24,18"
                    Margin="0,0,0,16"
                    Background="White"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Cursor="Hand">
                <Button.Effect>
                    <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="12" ShadowDepth="0"/>
                </Button.Effect>
            </Button>

            <Button Content="📋 Order Management"
                    Command="{Binding OpenOrderListCommand}"
                    Padding="24,18"
                    Margin="0,0,0,16"
                    Background="White"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Cursor="Hand">
                <Button.Effect>
                    <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="12" ShadowDepth="0"/>
                </Button.Effect>
            </Button>

            <Button Content="🚀 Create New Order (Workflow)"
                    Command="{Binding OpenWorkflowCommand}"
                    Padding="24,18"
                    Background="#10B981"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Effect>
                    <DropShadowEffect Color="#000000" Opacity="0.15" BlurRadius="12" ShadowDepth="2"/>
                </Button.Effect>
            </Button>
        </StackPanel>
    </Grid>
</local:ScopedWindow>