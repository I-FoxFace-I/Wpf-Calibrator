<local:ScopedWindow  xmlns:local="clr-namespace:AutofacEnhancedWpfDemo.Views" 
                     x:Class="AutofacEnhancedWpfDemo.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Autofac WPF Demo - Main Menu"
        Width="500" Height="600"
        WindowStartupLocation="CenterScreen"
        Background="#ECF0F1">
    <local:ScopedWindow.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3498DB"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="#3498DB"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </local:ScopedWindow.Resources>
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#2C3E50" 
                CornerRadius="8" 
                Padding="20"
                Margin="0,0,0,25">
            <StackPanel>
                <TextBlock Text="⚙️ Autofac DI Container Demo"
                           FontSize="24" FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>
                <TextBlock Text="Advanced Dependency Injection Patterns"
                           FontSize="12"
                           Foreground="#95A5A6"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Menu Buttons -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <Button Content="⭐ Advanced Patterns Demo (★★ NEW!)"
                    Command="{Binding OpenAdvancedDemoCommand}"
                    Style="{StaticResource MenuButtonStyle}"
                    Background="#9B59B6"
                    Foreground="White"
                    BorderBrush="#9B59B6"
                    Margin="0,0,0,12"/>

            <Button Content="🔗 Scope Hierarchy Demo (★ NEW)"
                    Command="{Binding OpenScopeHierarchyDemoCommand}"
                    Style="{StaticResource MenuButtonStyle}"
                    />

            <Button Content="📦 Products Management"
                    Command="{Binding OpenProductsCommand}"
                    Style="{StaticResource MenuButtonStyle}"/>

            <Button Content="👥 Customers Management"
                    Command="{Binding OpenCustomersCommand}"
                    Style="{StaticResource MenuButtonStyle}"/>

            <Button Content="📋 Orders List"
                    Command="{Binding OpenOrdersCommand}"
                    Style="{StaticResource MenuButtonStyle}"/>

            <Button Content="🛒 Order Creation Workflow"
                    Command="{Binding OpenWorkflowCommand}"
                    Style="{StaticResource MenuButtonStyle}"/>
        </StackPanel>

        <!-- Footer -->
        <Border Grid.Row="2" 
                Background="#34495E" 
                CornerRadius="8" 
                Padding="15">
            <TextBlock TextWrapping="Wrap"
                       FontSize="11" 
                       Foreground="#ECF0F1"
                       TextAlignment="Center">
                <Run Text="💡 "/>
                Check console output to see Autofac scope creation/disposal logging
            </TextBlock>
        </Border>
    </Grid>
</local:ScopedWindow>