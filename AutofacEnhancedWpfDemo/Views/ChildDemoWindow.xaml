<local:ScopedWindow xmlns:local="clr-namespace:AutofacEnhancedWpfDemo.Views"
                    x:Class="AutofacEnhancedWpfDemo.Views.ChildDemoWindow"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    Title="{Binding WindowTitle}"
                    Width="600" Height="600"
                    WindowStartupLocation="CenterScreen"
                    Background="#F8F9FA">

    <local:ScopedWindow.Resources>
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="RowHeight" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F1F5F9"/>
            <Setter Property="Foreground" Value="#334155"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8FAFC"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#DBEAFE"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </local:ScopedWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Colored Header -->
        <Border Grid.Row="0" 
                Padding="24">
            <Border.Background>
                <SolidColorBrush Color="{Binding WindowColor}"/>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="10" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="{Binding WindowTitle}" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"
                           Margin="0,0,0,8"/>
                <TextBlock Text="{Binding DbContextInfo}" 
                           FontSize="13" 
                           Foreground="#ECF0F1"
                           FontFamily="Consolas"/>
                <TextBlock Text="👉 Same DbContext = Shared data with parent &amp; all siblings!" 
                           FontSize="12" 
                           Foreground="#ECF0F1"
                           Margin="0,8,0,0"
                           FontWeight="Medium"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="24" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" 
                       Text="Products (Shared Scope)" 
                       FontSize="18" 
                       FontWeight="Bold"
                       Foreground="#1E293B"
                       Margin="0,0,0,16"/>

            <Border Grid.Row="1"
                    CornerRadius="8"
                    BorderBrush="#E2E8F0"
                    BorderThickness="1">
                <DataGrid ItemsSource="{Binding Products}"
                          SelectedItem="{Binding SelectedProduct}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" 
                                            Binding="{Binding Id}" 
                                            Width="60"/>
                        <DataGridTextColumn Header="Product Name" 
                                            Binding="{Binding Name}" 
                                            Width="*"/>
                        <DataGridTextColumn Header="Price" 
                                            Binding="{Binding Price, StringFormat=C2}" 
                                            Width="120"/>
                        <DataGridTextColumn Header="Stock" 
                                            Binding="{Binding Stock}" 
                                            Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        Margin="0,16,0,0"
                        HorizontalAlignment="Center">
                <Button Content="💰 Modify Price (+5%)" 
                        Command="{Binding ModifyProductCommand}"
                        Padding="16,10"
                        Margin="0,0,12,0"
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="SemiBold"
                        Cursor="Hand">
                    <Button.Background>
                        <SolidColorBrush Color="{Binding WindowColor}"/>
                    </Button.Background>
                </Button>
                <Button Content="🔄 Refresh" 
                        Command="{Binding RefreshCommand}"
                        Padding="16,10"
                        Background="#6B7280"
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="SemiBold"
                        Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Grid>
</local:ScopedWindow>